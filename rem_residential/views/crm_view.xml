<?xml version="1.0"?>
<odoo>
    <data>

        <!-- CRM Opportunities Form View -->
        <record id="view_crm_opportunity_rem_residential_unit_form" model="ir.ui.view">
            <field name="name">crm.lead.rem.res.unit.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="rem.view_crm_opportunity_rem_unit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='search_for_units']" position="after">
                    <page string="Searches for Residential Units">
                        <div name="residential_unit_base_fields">
                            <group string="General Features">
                                <group>
                                    <label for="re_min_bedrooms" string="Bedroms min/max"/>
                                    <div class="o_row">
                                        <field name="re_min_bedrooms" nolabel="1"/>
                                        <span>to</span>
                                        <field name="re_max_bedrooms" nolabel="1"/>
                                    </div>
                                    <field name="re_bathrooms"/>
                                </group>
                                <group>
                                    <field name="re_points_interest" widget="many2many_tags"/>
                                </group>
                            </group>
                            <group string="Indoor Features">
                                <group>
                                    <field name="re_air_conditioned"/>
                                    <field name="re_ducted_cooling"/>
                                    <field name="re_wardrobes"/>
                                    <field name="re_dishwasher"/>
                                </group>
                                <group>
                                    <field name="re_living_area"/>
                                </group>
                            </group>
                            <group string="Outdoor Features">
                                <group>
                                    <field name="re_backyard"/>
                                    <field name="re_alarm"/>
                                    <field name="re_entertaining"/>
                                    <field name="re_pool"/>
                                </group>
                                <group>
                                    <field name="re_garage_spaces"/>
                                    <field name="re_secure_parking"/>
                                    <field name="re_dog_friendly"/>
                                </group>
                            </group>
                            <group>
                                <group/>
                                <group>
                                    <button class="btn btn-sm oe_highlight" type="object"
                                            name="action_find_matching_units" icon="fa-search"
                                            string="Find Residential Units">
                                    </button>
                                </group>
                            </group>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
