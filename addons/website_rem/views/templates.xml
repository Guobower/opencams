<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Frontend assets page -->
        <template id="assets_frontend" inherit_id="website.assets_frontend" name="Rem frontend assets">
            <xpath expr="." position="inside">
                <link type="text/css" rel="stylesheet" href="/web/static/lib/bootstrap/css/bootstrap.min.css"/>
                <link type="text/css" rel="stylesheet" href="/web/static/lib/bootstrap/less/glyphicons.less"/>
            </xpath>
        </template>

        <!-- Rem Search -->
        <template id="rem_search" name="Rem Search">
            <div>
                <div class="form-group">
                    <select class="form-control">
                        <option>City</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Zip code</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Type</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>Number of rooms</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <input type="text" class="form-control" name="rem_unit_contact_min_price" placeholder="Min Price"/>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <input type="text" class="form-control" name="rem_unit_contact_max_price" placeholder="Max Price"/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <select class="form-control">
                        <option>New</option>
                        <option>Used</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="rem_unit_contact_reference" placeholder="Reference"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </template>

        <!-- Rem Contact -->
        <template id="rem_unit_contact" name="Rem Contact">
            <div>
                <div class="form-group">
                    <input type="text" class="form-control" name="rem_unit_contact_name" placeholder="Name"/>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="rem_unit_contact_email" placeholder="Email"/>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="rem_unit_contact_phone" placeholder="Phone"/>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="rem_unit_contact_message" rows="3" placeholder="Message"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send message</button>
                </div>
            </div>
        </template>

        <!-- Rem Pager -->
        <template id="rem_list_pager" name="Rem Pager">
            <t t-call="website.pager"/>
        </template>

        <!-- Rem Unit Item -->
        <template id="rem_unit_item" name="Rem Unit Item">
            <div class="row">
                <t t-foreach="units" t-as="rem_unit">
                    <a itemprop="url" t-att-href="'/rem/unit/%s' % slug(rem_unit)">
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="thumbnail">
                                <t t-if="rem_unit.image_ids">
                                    <span itemprop="image" t-field="rem_unit.image_ids[0].image" t-field-options='{"widget": "image"}'/>
                                </t>
                                <t t-if="rem_unit.price>0">
                                    <div>$<t t-esc="rem_unit.price"/></div>
                                </t>
                                <div class="caption">
                                    <div t-esc='rem_unit.contract_type_id.name'/>
                                    <div t-esc='rem_unit.name'/>
                                    <div>
                                        <t t-if="rem_unit.bedrooms>0">
                                            <span><span class="glyphicon glyphicon-bed" aria-hidden="true"></span> <t t-esc="rem_unit.bedrooms"/></span>
                                        </t>
                                        <t t-if="rem_unit.bathrooms>0">
                                            <span><i class="fa fa-tint"></i> <t t-esc="rem_unit.bathrooms"/></span>
                                        </t>
                                        <t t-if="rem_unit.garages>0">
                                            <span><i class="fa fa-car"></i> <t t-esc="rem_unit.garages"/></span>
                                        </t>
                                        <t t-if="rem_unit.area>0">
                                            <span><i class="fa fa-building"></i> <t t-esc="rem_unit.area"/>m<sup>2</sup></span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </t>
            </div>
        </template>

        <!-- 404 page -->
        <template id="404" name="404 page">
          <t t-call="website.layout">
              <div id="wrap">
                  <div class="oe_structure oe_empty">
                      <div class="container">
                          <h1 class="mt32">Unit not found!</h1>
                          <p>Sorry, this unit is not available anymore.</p>
                          <p><a t-attf-href="/rem">Return to the unit list.</a></p>
                      </div>
                  </div>
              </div>
          </t>
        </template>

        <!-- Rem Units List Page -->
        <template id="rem_list_page" name="Rem Units List Page">
            <t t-call="website.layout">
                <t t-set="additional_title">Real Estate</t>
                <div id="wrap" class="js_sale">
                    <div class="oe_structure"/>
                    <div class="container oe_website_sale">
                        <div class='row'>
                            <div class="col-md-9">
                                <t t-call="website_rem.rem_unit_item"/>
                            </div>
                            <div class="col-md-3">
                                <t t-call="website_rem.rem_search"/>
                            </div>
                        </div>
                        <div class="pricelist_list">
                            <t t-call="website_rem.rem_list_pager"/>
                        </div>
                    </div>
                    <div class="oe_structure mb32"/>
                </div>
            </t>
        </template>

        <!--  Unit Content -->
        <template id="rem_unit_content" name="Unit Content">
            <h3><t t-esc="unit.name"/></h3>
            <div id="carousel-container" class="carousel slide default-box-shadow" data-ride="carousel">
                <!--  Only has 1 iteration to use _size -->
                <t t-foreach="unit.image_ids" t-as="i">
                    <t t-if="i_first">
                        <!--  1 image - don't show carousel -->
                        <t t-if="i_size==1">
                            <span itemprop="image" t-field="i.image" t-field-options='{"widget": "image"}'/>
                        </t>
                        <!--  More than 1 image - show carousel -->
                        <t t-if="i_size>1">
                            <!--  Indicators -->
                            <ol class="carousel-indicators">
                                <t t-foreach="unit.image_ids" t-as="rem_unit">
                                    <t t-if="rem_unit_first">
                                        <li data-target="#carousel-container" t-attf-data-slide-to="{{ rem_unit_index }}" class="active"></li>
                                    </t>
                                    <t t-if="rem_unit_index>0">
                                        <li data-target="#carousel-container" t-attf-data-slide-to="{{ rem_unit_index }}"></li>
                                    </t>
                                </t>
                            </ol>
                            <!--  Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                <t t-foreach="unit.image_ids" t-as="rem_unit_image">
                                    <t t-if="rem_unit_image_first">
                                        <div class="item active">
                                            <span itemprop="image" t-field="rem_unit_image.image" t-field-options='{"widget": "image"}'/>
                                        </div>
                                    </t>
                                    <t t-if="rem_unit_image_index>0">
                                        <div class="item">
                                            <span itemprop="image" t-field="rem_unit_image.image" t-field-options='{"widget": "image"}'/>
                                        </div>
                                    </t>
                                </t>
                            </div>
                            <!--  Controls -->
                            <a class="left carousel-control" href="#carousel-container" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#carousel-container" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </t>
                    </t>
                </t>
            </div>
        </template>

        <!--  Unit List -->
        <template id="rem_unit_page" name="Unit List">
            <t t-call="website.layout">
                <t t-set="additional_title"><t t-esc="unit.name"/></t>
                <div id="wrap" class="js_sale">
                    <div class="oe_structure"/>
                    <div class="container oe_website_sale">
                        <div class='row'>
                            <div class="col-lg-8">
                                <t t-call="website_rem.rem_unit_content"/>
                            </div>
                            <div class="col-md-4">
                                <t t-call="website_rem.rem_unit_contact"/>
                                <t t-call="website_rem.rem_search"/>
                            </div>
                        </div>
                    </div>
                    <div class="oe_structure mb32"/>
                </div>
            </t>
        </template>

    </data>
</openerp>