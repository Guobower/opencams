<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- Layout and common templates -->

<template id="assets_frontend" inherit_id="website.assets_frontend" name="REM">
  <xpath expr="." position="inside">
      <link rel='stylesheet' href='/website_rem/static/src/css/website_rem.css'/>
      <script type="text/javascript" src="/website_rem/static/src/js/website_rem.js"></script>
  </xpath>
</template>

<template id="404">
  <t t-call="website.layout">
      <div id="wrap">
          <div class="oe_structure oe_empty">
              <div class="container">
                  <h1 class="mt32">Unit not found!</h1>
                  <p>Sorry, this unit is not available anymore.</p>
                  <p><a t-attf-href="/rem">Return to the unit list.</a></p>
              </div>
          </div>
      </div>
  </t>
</template>

<template id="website.layout_footer_copyright" inherit_id="website.layout" name="Footer Copyright">
    <xpath expr="//footer" position="inside">
        <div class="container mt16 mb8">
            <div class="pull-right" t-ignore="true" t-if="not editable">
                Powered by <a class="label label-danger" href="http://www.it4real.com/page/rem-system">Odoo</a>,
                the Real Estate Management System.
            </div>
            <div class="pull-left text-muted">
                Copyright &amp;copy; www.it4real.com
            </div>
        </div>
    </xpath>
</template>

<!-- /rem product listing -->

<template id="unit_list" name="Unit List">
  <t t-call="website.layout">
      <t t-set="additional_title">Unit List</t>
      <div id="wrap" class="js_sale">
        <div class="oe_structure"/>
        <div class="container oe_website_rem">
          <div class="units_pager">
            <div class="row" style="width: 100%;">
              <t t-set="search_class">pagination form-inline col-md-3</t></t>
              <t t-call="website.pager"/>
            </div>
          </div>
          <div class='row'>
            <div class="hidden" id="units_grid_before"></div>
            <div class="col-md-12" id="units_grid">
              <table width="100%">
                <tbody>
                  <tr t-ignore="true">
                    <td t-foreach="range(0,rows)" t-as="row" t-attf-width="#{100/rows}%"></td>
                  </tr>
                  <tr t-foreach="bins" t-as="tr_unit">
                    <t t-foreach="tr_unit" t-as="td_unit">
                      <t t-if="td_unit">
                      <t t-set="unit" t-value="td_unit['unit']"/>
                      <td t-att-colspan="td_unit[['x'] != 1 and td_unit[['x']"
                          t-att-rowspan="td_unit[['y'] != 1 and td_unit['y']"
                          t-attf-class="oe_unit oe_grid oe-height-#{td_unit['y']*2} #{ td_unit['class'] }">

                          <div class="oe_unit_cart" t-att-data-publish="product.website_published and 'on' or 'off'">
                            <t t-set="product_image_big" t-value="td_unit['x']+td_unit['y'] > 2"/>
<!--                             <t t-call="website_rem.units_item"/> -->
                          </div>

                      </td>
                      </t>
                      <td t-if="not td_unit" class="oe-height-2"/>
                    </t>
                  </tr>
                </tbody>
              </table>
              <t t-if="not bins">
                <div class="text-center text-muted">
                  <h3 class="css_editable_display">No product defined.</h3>
                  <t groups="base.group_website_publisher">
                    <p groups="base.group_sale_manager">Use the <i>'Content'</i> top menu to create a new product.</p>
                  </t>
                </div>
              </t>
            </div>
          </div>
          <div class="units_pager">
              <t t-call="website.pager"/>
          </div>
        </div>
        <div class="oe_structure mb32"/>
      </div>
  </t>
</template>

</data>
</openerp>
