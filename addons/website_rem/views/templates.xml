<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
<!-- Frontend assets page -->
<template id="assets_frontend" inherit_id="website.assets_frontend" name="Rem frontend assets">
  <xpath expr="." position="inside">
	<!-- for including future libs --> 
  </xpath>
</template>

<!-- 404 page -->
<template id="404">
  <t t-call="website.layout">
      <div id="wrap">
          <div class="oe_structure oe_empty">
              <div class="container">
                  <h1 class="mt32">Unit not found!</h1>
                  <p>Sorry, this unit is not available anymore.</p>
                  <p><a t-attf-href="/rem">Return to the unit list.</a></p>
              </div>
          </div>
      </div>
  </t>
</template>

<!--  Units List -->
<template id="pricelist_list" name="Pricelists Dropdown">
  <t t-set="website_sale_pricelists" t-value="website.get_pricelist_available(show_visible=True)"/>
  <div t-attf-class="#{website_sale_pricelists and len(website_sale_pricelists)>1 and 'dropdown' or 'hidden'} btn-group">
    <t t-set="curr_pl" t-value="website.get_current_pricelist()"/>
    <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
      <t t-esc="curr_pl and curr_pl.name or ' - '" />
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li t-foreach="website_sale_pricelists" t-as="pl" >
        <a t-att-href="'/shop/change_pricelist/%s' % pl.id"><span class='switcher_pricelist' t-att-data-pl_id="pl.id" t-esc="pl.name"/></a>
      </li>
    </ul>
  </div>
</template>

<template id="units" name="Units List">
  <t t-call="website.layout">
      <t t-set="additional_title">Unit List</t>
      <div id="wrap">
        <div class="oe_structure"/>
        <div class="container oe_website_rem">
            <div class="row">
                <t t-set="i" t-value="0"/>
                <t t-foreach="units" t-as="rem_unit">
                  <div class="col-sm-6 col-md-4">

                      <a itemprop="url" t-att-href="'/rem/unit/%s' % slug(rem_unit)">

                          <div class="thumbnail">
                              <img src="http://imobitabua.com/wp-content/uploads/2015/10/A521_1-270x200.jpg"/>
                              <div class="caption">
                                  <h3><t t-esc="rem_unit.name"/></h3>
                                  <p>...</p>
                                  <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                              </div>
                          </div>

                    </a>

                  </div>
                  <t t-set="i" t-value="i+1"/>
                </t>
            </div>
            <div t-if="i==0">
                <h1>Sorry, no units available :(</h1>
            </div>
            <div t-if="i!=0">
                <div t-if="i==1">
                    <h1>currently showing <t t-esc="i"/> unit</h1>
                </div>
                <div t-if="i!=1">
                    <h1>currently showing <t t-esc="i"/> units</h1>
                </div>
                <t t-call="website.pager"/>
            </div>
        </div>
        <div class="oe_structure mb32"/>
      </div>
  </t>
</template>

<!--  Unit List -->
<template id="unit" name="Unit">
    <h1>Big brother is watching unit: <strong><t t-esc="unit.name"/></strong></h1>
    <a href="/rem/">
        <button class="btn btn-default">Go back</button>
    </a>
</template>

    </data>
</openerp>