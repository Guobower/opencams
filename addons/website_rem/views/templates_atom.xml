<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

<!-- Atom Feed -->
<template id="sell_feed">&lt;?xml version="1.0" encoding="utf-8"?&gt;
<feed t-att-xmlns="'http://www.w3.org/2005/Atom'">
    <title t-esc="otype.name"/>
    <link t-att-href="'%s/rem?offer_type=%s' % (base_url ,otype.id)"/>
    <id t-esc="'%s/rem?offer_type=%s' % (base_url, otypeid)"/>
    <updated t-esc="(posts[0] if posts else otype).write_date.replace(' ', 'T') + 'Z'"/>
    <entry t-foreach="posts" t-as="post">
        <title t-esc="post.name"/>
        <link t-att-href="'%s/rem/unit/%s' % (base_url, post.id)"/>
        <id t-esc="'%s/rem/unit/%s' % (base_url, post.id)"/>
        <author><name t-esc="post.sudo().user_id.name"/></author>
        <summary t-esc="post.display_name"/>
        <updated t-esc="post.write_date.replace(' ', 'T') + 'Z'"/>
        <bedrooms t-esc="post.bedrooms"/>
    </entry>
</feed>
</template>

</data>
</odoo>