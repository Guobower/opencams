<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

        <!-- Real Estate Asset Form -->
        <record id="view_rem_website_unit_form" model="ir.ui.view">
            <field name="name">rem.res.unit.form</field>
            <field name="model">rem.unit</field>
            <field name="inherit_id" ref="rem.view_rem_unit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='current_listing_contract_id']" position="before">
                    <field name="feature_id" invisible="1"/>
                    <field name="is_featured" placeholder="Is Featured"/>
                </xpath>
                <xpath expr="//field[@name='stage_id']" position="before">
                    <button name="add_feature" type="object" attrs="{'invisible': [('is_featured', '=', True)]}" string="Add to Featured" class="oe_highlight"/>
                    <button name="remove_feature" type="object" attrs="{'invisible': [('is_featured', '=', False)]}" string="Remove from Featured"  class="oe_highlight"/>
                </xpath>
            </field>
        </record>

	</data>
</odoo>
