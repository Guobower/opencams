<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Real Estate Asset Action Window -->
        <record id="action_rem_unit_sale" model="ir.actions.act_window">
            <field name="name">For Sale</field>
            <field name="res_model">rem.unit</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="target">current</field>
            <field name="context" eval="{'search_default_offer_type_id': ref('offer_type_buy'), 'default_offer_type': ref('offer_type_buy'), 'is_rent': False}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to list a new unit.
                </p><p>
                    The real estate units / listing can be rentable or sellable
                    being owned or just commissioned by your company.
                </p>
            </field>
        </record>
        
        <menuitem id="menu_rem_properties_unit" parent="rem.menu_rem_properties" action="action_rem_unit_sale" sequence="10"/>
        
        <record id="offer_type_buy" model="offer.type">
            <field name="listing_menu_id" ref="menu_rem_properties_unit"/>
            <field name="listing_action_id" ref="action_rem_unit_sale"/>
        </record>

        <!-- Real Estate Asset Action Window -->
        <record id="action_rem_unit_rent" model="ir.actions.act_window">
            <field name="name">For Rent</field>
            <field name="res_model">rem.unit</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="target">current</field>
            <field name="context" eval="{'search_default_offer_type_id': ref('offer_type_rent'), 'default_offer_type': ref('offer_type_rent'), 'is_rent': True}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to list a new unit.
                </p><p>
                    The real estate units / listing can be rentable or sellable
                    being owned or just commissioned by your company.
                </p>
            </field>
        </record>

        <menuitem id="menu_rem_properties_unit_rent" parent="rem.menu_rem_properties" action="action_rem_unit_rent" sequence="15"/>
        
        <record id="offer_type_rent" model="offer.type">
            <field name="listing_menu_id" ref="menu_rem_properties_unit_rent"/>
            <field name="listing_action_id" ref="action_rem_unit_rent"/>
        </record>

    </data>
</odoo>