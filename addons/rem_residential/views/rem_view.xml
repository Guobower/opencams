<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

        <!--
            Real Estate Asset
        -->
        
        <!-- Real Estate Asset Tree View -->
        <record id="view_rem_residential_unit_tree" model="ir.ui.view">
            <field name="name">rem.res.unit.tree</field>
            <field name="model">rem.unit</field>
            <field name="inherit_id" ref="rem.view_rem_unit_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rent_uom_id']" position="after">
                    <field name="living_area"/>
                    <field name="bedrooms"/>
                    <field name="bathrooms"/>
                </xpath>
            </field>
        </record>

        <!-- Real Estate Asset Search View -->
        <record id="view_rem_residential_unit_filter" model="ir.ui.view">
            <field name="name">rem.res.unit.filter</field>
            <field name="model">rem.unit</field>
            <field name="inherit_id" ref="rem.view_rem_unit_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_new']" position="after">
                    <separator/>
                    <!-- General Features -->
                    <field name="bedrooms"/>
                    <field name="bathrooms"/>
                    <field name="toilets"/>
                    <field name="living_area"/>
                    <field name="land_area"/>
                    <field name="points_interest"/>
                    <separator/>
                    <!-- Indoor Features -->
                    <field name="area"/>
                    <field name="airConditioning"/>
                    <field name="ducted_cooling"/>
                    <field name="builtInRobes"/>
                    <field name="dishwasher"/>
                    <separator/>
                    <!-- Outdoor Features -->
                    <field name="garages"/>
                    <field name="backyard"/>
                    <field name="dog_friendly"/>
                    <field name="secure_parking"/>
                    <field name="alarmSystem"/>
                    <field name="swpool"/>
                    <field name="entertaining"/>
                    <field name="balconies"/>
                </xpath>
                <xpath expr="//filter[@name='offertype']" position="after">
                    <filter string="Bedrooms" icon="terp-partner" domain="[]" context="{'group_by':'bedrooms'}"/>
                    <filter string="Bathrooms" icon="terp-partner" domain="[]" context="{'group_by':'bathrooms'}"/>
                </xpath>
            </field>
        </record>

        <!-- Real Estate Asset Form -->
        <record id="view_rem_residential_unit_form" model="ir.ui.view">
            <field name="name">rem.res.unit.form</field>
            <field name="model">rem.unit</field>
            <field name="inherit_id" ref="rem.view_rem_unit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='general_features']/group[@class='rem_left']" position="inside">
                    <field name="bedrooms" invisible="1"/>
                    <field name="bathrooms" invisible="1"/>
                    <field name="toilets" invisible="1"/>
                    <field name="living_area" invisible="1"/>
                    <field name="land_area" invisible="1"/>
                </xpath>
                <xpath expr="//group[@name='general_features']/group[@class='rem_right']" position="inside">
                    <field name='points_interest' invisible="1" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//group[@name='indoor_features']/group[@class='rem_left']" position="inside">
                    <field name="area" invisible="1"/>
                    <field name="airConditioning" invisible="1"/>
                    <field name="ducted_cooling" invisible="1"/>
                    <field name="builtInRobes" invisible="1"/>
                    <field name="dishwasher" invisible="1"/>
                </xpath>
                <xpath expr="//group[@name='outdoor_features']/group[@class='rem_left']" position="inside">
                    <field name="garages" invisible="1"/>
                    <field name="backyard" invisible="1"/>
                    <field name="dog_friendly" invisible="1"/>
                    <field name="secure_parking" invisible="1"/>
                    <field name="garages" invisible="1"/>
                </xpath>
                <xpath expr="//group[@name='outdoor_features']/group[@class='rem_right']" position="inside">
                    <field name="alarmSystem" invisible="1"/>
                    <field name="swpool" invisible="1"/>
                    <field name="entertaining" invisible="1"/>
                    <field name="balconies" invisible="1"/>
                </xpath>
            </field>
        </record>

	</data>
</odoo>