<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Delete All Unit of Measure Categories -->
        <function model="product.uom.categ" name="delete_all_uom_categories"/>
    </data>
    <data noupdate="0">

        <!-- For Demo Server -->

        <record model="ir.actions.act_url" id="action_pos_pos">
            <field name="name">Start Listings</field>
            <field name="url">/web#menu_id=211</field>
            <field name="target">self</field>
        </record>   	
 
 		<!-- Configuration Parameters -->
 
        <record model="ir.config_parameter" id="unit_websitename_format_key">
            <field name="key">rem.unit_websitename_format</field>
            <field name="value">{street} {street2}, {city}, {state} {zip}</field>
            <field name="group_ids" eval="[(4, ref('base.group_system'))]" />
        </record>
        
        <record model="ir.config_parameter" id="unit_name_format_key">
            <field name="key">rem.unit_name_format</field>
            <field name="value">{street:.10}, {CITY:.5}, {bedrooms} bd • {bathrooms} ba • {land_area} sqft.</field>
            <field name="group_ids" eval="[(4, ref('base.group_system'))]" />
        </record>

		<!-- Default Category and Product for invoicing rent/ leasing -->

        <record id="uom_categ_rentime" model="product.uom.categ">
            <field name="name">Rental Units</field>
        </record>

        <record id="product_rent_hour" model="product.uom">
            <field name="name">per Hour</field>
            <field eval="uom_categ_rentime" name="category_id"/>
            <field name="factor" eval="0.041"/>
        </record>

        <record id="product_rent_day" model="product.uom">
            <field name="name">per Day</field>
            <field eval="uom_categ_rentime" name="category_id"/>
            <field name="factor" eval="1.0"/>
        </record>

        <record id="product_rent_week" model="product.uom">
            <field name="name">per Week</field>
            <field eval="uom_categ_rentime" name="category_id"/>
            <field name="factor_inv" eval="7"/>
            <field name="uom_type">bigger</field>
        </record>

        <record id="product_rent_month" model="product.uom">
            <field name="name">per Month</field>
            <field eval="uom_categ_rentime" name="category_id"/>
            <field name="factor_inv" eval="30"/>
            <field name="uom_type">bigger</field>
        </record>
		
        <record id="product_houserental_category" model="product.category">
            <field name="parent_id" ref="product.product_category_all"/>
            <field name="name">House Rental</field>
        </record>

        <record id="product_rem_rentservice" model="product.product">
            <field name="name">Rent Service</field>
            <field name="categ_id" ref="product_houserental_category"/>
            <field name="standard_price">1</field>
            <field name="list_price">1</field>
            <field name="type">service</field>
            <field name="uom_id" ref="product_rent_day"/>
            <field name="uom_po_id" ref="product_rent_day"/>
            <field name="description">Daily Rent Service</field>
        </record>
		
        <record id="product_brokerage_category" model="product.category">
            <field name="parent_id" ref="product.product_category_all"/>
            <field name="name">Brokerage</field>
        </record>

        <record id="product_rem_brokerservice" model="product.product">
            <field name="name">Brokerage Service</field>
            <field name="categ_id" ref="product_brokerage_category"/>
            <field name="standard_price">1</field>
            <field name="list_price">1</field>
            <field name="type">service</field>
            <field name="uom_id" ref="product_rent_hour"/>
            <field name="uom_po_id" ref="product_rent_hour"/>
            <field name="description">Brokerage Service</field>
        </record>
        
        <!-- Tenant / Renting Contract Types -->      
        
        <record id="tenant_contract_type_0" model="rem.tenant.contract.type">
            <field name="code">MON</field>
            <field name="name">Monthly rent contract - 2 Advance payments</field>
            <field name="sale_product_id" ref="product_rem_rentservice"/>
            <field name="notes">
            	With this type of contract the
            	tenant gets no laundry access
            </field>
        </record>
        
        <record id="tenant_contract_type_1" model="rem.tenant.contract.type">
            <field name="code">WEEK</field>
            <field name="name">Weekly rent contract</field>
            <field name="sale_product_id" ref="product_rem_rentservice"/>
            <field name="notes">
            	With this type of contract the
            	tenant needs to provide credit card
            </field>
        </record>

        <!-- Listing Contract Types -->      
        
        <record id="listing_contract_type_0" model="rem.listing.contract.type">
            <field name="code">XSELL</field>
            <field name="name">Exclusive Right to Sell Listing</field>
            <field name="sale_product_id" ref="product_rem_brokerservice"/>
            <field name="notes"><![CDATA[In this agreement, the agent gets paid no matter who sells the property,
regardless of whether it's the agent or the seller.]]></field>
        </record>
        
        <record id="listing_contract_type_1" model="rem.listing.contract.type">
        	<field name="code">AGENCY</field>
            <field name="name">Exclusive Agency Listing</field>
            <field name="sale_product_id" ref="product_rem_brokerservice"/>
            <field name="notes"><![CDATA[Agents get paid in this type of agreement only if they sell the property. 
 No fee is earned if the owner alone sells the property.]]></field>
        </record>
        
        <record id="listing_contract_type_2" model="rem.listing.contract.type">
        	<field name="code">OPEN</field>
            <field name="name">Open Listing</field>
            <field name="sale_product_id" ref="product_rem_brokerservice"/>
            <field name="notes"><![CDATA[In this type of agreement, sellers have the right to use
 as many brokers as they want. The seller is not, however, obligated to pay any
 of them if he or she sells the property without the broker's help.]]></field>
        </record>
        
        <record id="listing_contract_type_3" model="rem.listing.contract.type">
        	<field name="code">NET</field>
            <field name="name">Net Listing</field>
            <field name="sale_product_id" ref="product_rem_brokerservice"/>
            <field name="notes"><![CDATA[This type of agreement may be illegal in your state. 
 The agent gets to keep everything he can get that's more than the sale price the owner wants.]]></field>
        </record>
        
        <!-- Offer Types -->
        
        <record id="offer_type_buy" model="offer.type">
            <field name="name">Buy</field>
            <field name="unit_name_format">{street:.10}, {CITY:.5}, {bedrooms} bd • {bathrooms} ba.</field>
            <field name="unit_websitename_format">{street:.10}, {CITY:.5}, {bedrooms} bd • {bathrooms} ba.</field>
            <field name="is_rent" eval="0"/>
            <field name="menu_name">For Sale</field>
        </record>
        
        <record id="offer_type_rent" model="offer.type">
            <field name="name">Rent</field>
            <field name="unit_name_format">{street:.10}, {CITY:.5}, {bedrooms} bd • {bathrooms} ba.</field>
            <field name="unit_websitename_format">{street:.10}, {CITY:.5}, {bedrooms} bd • {bathrooms} ba.</field>
            <field name="is_rent" eval="1"/>
            <field name="menu_name">For Rent</field>
        </record>
        
​        <!-- Unit Stages -->

        <record id="rem_unit_stage_buy_staging" model="rem.unit.stage">
            <field name="name">Staging</field>
            <field name="offer_type_id" ref="offer_type_buy"/>
            <field name="force_show" eval="1"/>
            <field name="force_hide" eval="0"/>
            <field name="sequence" eval="10"/>
        </record>
        
​        <record id="rem_unit_stage_buy_available" model="rem.unit.stage">
            <field name="name">Available</field>
            <field name="offer_type_id" ref="offer_type_buy"/>
            <field name="force_show" eval="0"/>
            <field name="force_hide" eval="0"/>
            <field name="sequence" eval="20"/>
        </record>
​        
​        <record id="rem_unit_stage_buy_sold" model="rem.unit.stage">
            <field name="name">Sold</field>
            <field name="offer_type_id" ref="offer_type_buy"/>
            <field name="force_show" eval="0"/>
            <field name="force_hide" eval="1"/>
            <field name="sequence" eval="30"/>
        </record>
​        
​        <record id="rem_unit_stage_rent_refurbish" model="rem.unit.stage">
            <field name="name">Refurbish</field>
            <field name="offer_type_id" ref="offer_type_rent"/>
            <field name="force_show" eval="1"/>
            <field name="force_hide" eval="0"/>
            <field name="sequence" eval="10"/>
        </record>
​        
​        <record id="rem_unit_stage_rent_available" model="rem.unit.stage">
            <field name="name">Available</field>
            <field name="offer_type_id" ref="offer_type_rent"/>
            <field name="force_show" eval="0"/>
            <field name="force_hide" eval="0"/>
            <field name="sequence" eval="20"/>
        </record>
​
​        <record id="rem_unit_stage_rent_occupied" model="rem.unit.stage">
            <field name="name">Occupied</field>
            <field name="offer_type_id" ref="offer_type_rent"/>
            <field name="force_show" eval="0"/>
            <field name="force_hide" eval="0"/>
            <field name="sequence" eval="30"/>
        </record>
​​        
​        <record id="rem_unit_stage_rent_out" model="rem.unit.stage">
            <field name="name">Out of market</field>
            <field name="offer_type_id" ref="offer_type_rent"/>
            <field name="force_show" eval="0"/>
            <field name="force_hide" eval="1"/>
            <field name="sequence" eval="40"/>
        </record>

        <!-- Sequences for rem.unit -->
        <record id="seq_rem_unit" model="ir.sequence">
            <field name="name">Real Estate Unit</field>
            <field name="code">rem.unit.sl</field>
            <field name="prefix">#</field>
            <field name="padding">6</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Unit-related subtypes for messaging / Chatter -->
        <record id="mt_listing_created" model="mail.message.subtype">
            <field name="name">Listing Expired</field>
            <field name="res_model">unit.listing.contract</field>
            <field name="default" eval="False"/>
            <field name="description">Listing expired</field>
        </record>

        <!-- Max Feature Units -->
        <record id="max_feature_units" model="ir.config_parameter">
            <field name="key">max_feature_units</field>
            <field name="value">8</field>
        </record>

        <!-- Offer-type fields -->

        <record id="offer_type_field1" model="offer.type.fields">
            <field name="name">bedrooms</field>
            <field name="label">Bedrooms</field>
            <field name="rem_category">general</field>
            <field name="ttype">integer</field>
        </record>
        <record id="offer_type_field2" model="offer.type.fields">
            <field name="name">bathrooms</field>
            <field name="label">Bathrooms</field>
            <field name="rem_category">general</field>
            <field name="ttype">integer</field>
        </record>
        <record id="offer_type_field3" model="offer.type.fields">
            <field name="name">toilets</field>
            <field name="label">Toilets</field>
            <field name="rem_category">general</field>
            <field name="ttype">integer</field>
        </record>
        <record id="offer_type_field4" model="offer.type.fields">
            <field name="name">living_area</field>
            <field name="label">Living Area</field>
            <field name="rem_category">general</field>
            <field name="ttype">float</field>
        </record>
        <record id="offer_type_field5" model="offer.type.fields">
            <field name="name">land_area</field>
            <field name="label">Land Area</field>
            <field name="rem_category">general</field>
            <field name="ttype">float</field>
        </record>
        <record id="offer_type_field6" model="offer.type.fields">
            <field name="name">points_interest</field>
            <field name="label">Points of Interest</field>
            <field name="rem_category">general</field>
            <field name="ttype">many2many</field>
        </record>
        <record id="offer_type_field7" model="offer.type.fields">
            <field name="name">area</field>
            <field name="label">Area</field>
            <field name="rem_category">indoor</field>
            <field name="ttype">float</field>
        </record>
        <record id="offer_type_field8" model="offer.type.fields">
            <field name="name">airConditioning</field>
            <field name="label">Air Conditioned</field>
            <field name="rem_category">indoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field9" model="offer.type.fields">
            <field name="name">ducted_cooling</field>
            <field name="label">Ducted Cooling</field>
            <field name="rem_category">indoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field10" model="offer.type.fields">
            <field name="name">builtInRobes</field>
            <field name="label">Built-in Wardrobes</field>
            <field name="rem_category">indoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field11" model="offer.type.fields">
            <field name="name">dishwasher</field>
            <field name="label">Dishwasher</field>
            <field name="rem_category">indoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field12" model="offer.type.fields">
            <field name="name">garages</field>
            <field name="label">Garage Spaces</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">integer</field>
        </record>
        <record id="offer_type_field13" model="offer.type.fields">
            <field name="name">backyard</field>
            <field name="label">Backyard</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field14" model="offer.type.fields">
            <field name="name">dog_friendly</field>
            <field name="label">Dog Friendly</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field15" model="offer.type.fields">
            <field name="name">secure_parking</field>
            <field name="label">Secure Parking</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field16" model="offer.type.fields">
            <field name="name">alarmSystem</field>
            <field name="label">Alarm System</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field17" model="offer.type.fields">
            <field name="name">swpool</field>
            <field name="label">Swimming Pool</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field18" model="offer.type.fields">
            <field name="name">entertaining</field>
            <field name="label">Outdoor Entertaining Area</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">boolean</field>
        </record>
        <record id="offer_type_field19" model="offer.type.fields">
            <field name="name">balconies</field>
            <field name="label">Balconies</field>
            <field name="rem_category">outdoor</field>
            <field name="ttype">integer</field>
        </record>

    </data>
</openerp>
        
