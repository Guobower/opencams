<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Add custom fields (ir.model.fields) features (general, indoor or outdoor)-->

        <!-- General Features -->
        <record id="rem_fld_bedrooms" model="ir.model.fields">
             <field name="name">x_bedrooms</field>
             <field name="field_description">Bedrooms</field>
             <field name="ttype">integer</field>
             <field name="required">True</field>
             <field name="rem_category">general</field>
             <field name="model">rem.unit</field>
             <field name="model_id" ref="rem.model_rem_unit"/>
        </record>
        <record id="rem_fld_bathrooms" model="ir.model.fields">
             <field name="name">x_bathrooms</field>
             <field name="field_description">Bathrooms</field>
             <field name="ttype">integer</field>
             <field name="required">True</field>
             <field name="rem_category">general</field>
             <field name="model">rem.unit</field>
             <field name="model_id" ref="rem.model_rem_unit"/>
        </record>
        <record id="rem_fld_toilets" model="ir.model.fields">
             <field name="name">x_toilets</field>
             <field name="field_description">Toilets</field>
             <field name="ttype">integer</field>
             <field name="required">True</field>
             <field name="rem_category">general</field>
             <field name="model">rem.unit</field>
             <field name="model_id" ref="rem.model_rem_unit"/>
        </record>
        <record id="rem_fld_living_area" model="ir.model.fields">
             <field name="name">x_living_area</field>
             <field name="field_description">Living Area</field>
             <field name="ttype">float</field>
             <field name="rem_category">general</field>
             <field name="model">rem.unit</field>
             <field name="model_id" ref="rem.model_rem_unit"/>
        </record>
        <record id="rem_fld_land_area" model="ir.model.fields">
             <field name="name">x_land_area</field>
             <field name="field_description">Land Area</field>
             <field name="ttype">float</field>
             <field name="rem_category">general</field>
             <field name="model">rem.unit</field>
             <field name="model_id" ref="rem.model_rem_unit"/>
        </record>
        <record id="rem_fld_points_interest" model="ir.model.fields">
             <field name="name">x_points_interest</field>
             <field name="field_description">Points of Interest</field>
             <field name="ttype">many2many</field>
             <field name="relation">location.preferences</field>
             <field name="rem_category">general</field>
             <field name="model">rem.unit</field>
             <field name="model_id" ref="rem.model_rem_unit"/>
        </record>
        <record id="rem_fld_tax" model="ir.model.fields">
             <field name="name">x_tax</field>
             <field name="field_description">Sale Tax</field>
             <field name="ttype">selection</field>
             <field name="rem_category">general</field>
             <field name="selection">[('Unknown', 'Unknown'),('Exempt', 'Exempt'),('Inclusive', 'Inclusive'),('Exclusive', 'Exclusive')]</field>
             <field name="model">rem.unit</field>
             <field name="model_id" ref="rem.model_rem_unit"/>
        </record>

        <!-- Indoor Features -->
        <record id="rem_fld_area" model="ir.model.fields">
             <field name="name">x_area</field>
             <field name="field_description">Area</field>
