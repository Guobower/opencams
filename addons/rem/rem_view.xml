<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
        <!-- Top menu item -->
        <menuitem name="Real Estate"
            id="menu_rem"
            groups="base.group_user"
            sequence="50"/>
		<menuitem id="menu_rem_obj" parent="menu_rem" name="Asset Data"/>
		<menuitem id="menu_rem_conf" parent="menu_rem" name="Configuration"/>
		
        <!-- 
        	Realestate Asset 
        -->
        <!-- Realestate Asset Tree View -->

        <record id="view_rem_unit_tree" model="ir.ui.view">
            <field name="name">rem.unit.tree</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <tree string="Real Estate Unit">
                    <field name="name"/>
                </tree>
            </field>
        </record>

		<!-- Realestate Asset Search View -->

        <record id="view_rem_unit_filter" model="ir.ui.view">
            <field name="name">rem.unit.filter</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <search string="Search Real Estate Unit">
                    <field name="name"/>
                    <separator/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Salesman" icon="terp-partner" domain="[]" help="Salesman" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Realestate Asset Form View -->
	
		<record id="view_rem_unit_form" model="ir.ui.view">
			<field name="name">rem.unit.form</field>
			<field name="model">rem.unit</field>
			<field name="arch" type="xml">
				<form string="Real Estate Unit">
					<header>
						<field name="stage_id" widget="statusbar" clickable="True" />
                        <button	name="add_feature" type="object" attrs="{'invisible': [('is_feature', '=', True)]}" string="Add to Features"/>
                        <button	name="remove_feature" type="object" attrs="{'invisible': [('is_feature', '=', False)]}" string="Remove from Features"/>
					</header>
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1>
								<field name="name" placeholder="Describe the unit ..." />
							</h1>
						</div>
						<group>
							<group>
								<field name="contract_type_id" />
								<field name="create_date" />
								<field name="user_id" placeholder="Salesman" />
								<field name="price" />
								<field name="is_rent" invisible="1"/>
								<field name="rent_unit" attrs="{'invisible': [('is_rent', '=', False)]}"/>
                                <field name="is_new" />
                                <field name="city_id" placeholder="City" />
                                <field name="feature_id" placeholder="feature id"/>
                                <field name="is_feature" placeholder="is feature"/>
							</group>
							<group>
                                <field name="bedrooms" />
								<field name="bathrooms" />
								<field name="garages" />
                            	<field name="area" />
								<field name="active" />
							</group>
						</group>
						<notebook>
							<page string="Photos">
								<group>
									<field name="image_ids" mode="kanban" nolabel="1" context="{'default_unit_id': active_id}">
										<kanban>
											<field name="name" />
											<field name="image" />
											<field name="image_medium" />
											<field name="unit_id" />
											<templates>
												<t t-name="kanban-box">
													<div class="oe_kanban_global_click" style="position: relative">
														<a t-if="! read_only_mode" type="delete"
															style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
														<div class="oe_module_vignette">
															<img
																t-att-src="kanban_image('rem.image', 'image_medium', record.unit_id.raw_value)"
																t-att-title="record.unit_id.value"  
																class="img-responsive"/>
															<div class="oe_module_desc">
																<field name="name" />
															</div>
														</div>
													</div>
												</t>
											</templates>
										</kanban>
									</field>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Realestate Asset Action Window -->
        
        <record id="action_rem_unit" model="ir.actions.act_window">
            <field name="name">Real Estate Units</field>
            <field name="res_model">rem.unit</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
	        <field name="help" type="html">
	            <p class="oe_view_nocontent_create">
	                Click to add a real estate unit.
	            </p><p>
	                The real estate units can be rentable or sellable
	                being owned or just commissioned by your company.
	            </p>
	        </field>
        </record>

        <menuitem id="menu_rem_obj_unit" parent="menu_rem_obj" action="action_rem_unit" sequence="10"/>

        <!--
        	Unit City
        -->
        <!-- Unit City Tree View -->

        <record id="view_rem_unit_city_tree" model="ir.ui.view">
            <field name="name">rem.unit.city.tree</field>
            <field name="model">rem.unit.city</field>
            <field name="arch" type="xml">
                <tree string="Unit City">
                    <field name="name" string="Name"/>
                </tree>
            </field>
        </record>

		<!-- Unit City Search View -->

        <record id="view_rem_unit_city_filter" model="ir.ui.view">
            <field name="name">rem.unit.city.filter</field>
            <field name="model">rem.unit.city</field>
            <field name="arch" type="xml">
                <search string="Search Unit City">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Unit City Form View -->

        <record id="view_rem_unit_city_form" model="ir.ui.view">
            <field name="name">rem.unit.city.form</field>
            <field name="model">rem.unit.city</field>
            <field name="arch" type="xml">
                <form string="Unit City">
	                <sheet>
	                	<group>
		                    <field name="name" string="Name"/>
		                    <field name="active"/>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>

		<!-- Unit City Action Window -->

        <record id="action_rem_unit_city" model="ir.actions.act_window">
            <field name="name">Unit City</field>
            <field name="res_model">rem.unit.city</field>
            <field name="view_mode">tree,form</field>
	        <field name="help" type="html">
	            <p class="oe_view_nocontent_create">
	                Click to add a Unit City.
	            </p><p>
	                The Unit City are for the purpose of ???
	                allowing you to control the ....
	            </p>
	        </field>
        </record>

        <menuitem id="menu_rem_unit_city" name="Unit City" parent="menu_rem_conf" action="action_rem_unit_city" sequence="100"/>

        <!-- 
        	Unit Type
        -->
        <!-- Unit Type Tree View -->

        <record id="view_rem_unit_type_tree" model="ir.ui.view">
            <field name="name">rem.unit.type.tree</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <tree string="Unit Type">
                    <field name="name" string="Name"/>
                </tree>
            </field>
        </record>

		<!-- Unit Type Search View -->

        <record id="view_rem_unit_type_filter" model="ir.ui.view">
            <field name="name">rem.unit.type.filter</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <search string="Search Unit Type">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Unit Type Form View -->
        
        <record id="view_rem_unit_type_form" model="ir.ui.view">
            <field name="name">rem.unit.type.form</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <form string="Unit Type">
	                <sheet>
	                	<group>
		                    <field name="name" string="Name"/>
		                    <field name="active"/>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>
		
		<!-- Unit Type Action Window -->
        
        <record id="action_rem_unit_type" model="ir.actions.act_window">
            <field name="name">Unit Type</field>
            <field name="res_model">rem.unit.type</field>
            <field name="view_mode">tree,form</field>
	        <field name="help" type="html">
	            <p class="oe_view_nocontent_create">
	                Click to add a Unit Type.
	            </p><p>
	                The Unit Type are for the purpose of ???
	                allowing you to control the ....
	            </p>
	        </field>
        </record>

        <menuitem id="menu_rem_unit_type" name="Unit Type" parent="menu_rem_conf" action="action_rem_unit_type" sequence="100"/>

        <!-- 
        	Unit Stage 
		-->
        <!-- Unit Stage Tree View -->

        <record id="view_rem_unit_stage_tree" model="ir.ui.view">
            <field name="name">rem.unit.stage.tree</field>
            <field name="model">rem.unit.stage</field>
            <field name="arch" type="xml">
                <tree string="Unit Stage">
                    <field name="name"/>
                    <field name="contract_type_id"/>
                </tree>
            </field>
        </record>

		<!-- Unit Stage Search View -->

        <record id="view_rem_unit_stage_filter" model="ir.ui.view">
            <field name="name">rem.unit.stage.filter</field>
            <field name="model">rem.unit.stage</field>
            <field name="arch" type="xml">
                <search string="Search Unit Stage">
                    <field name="name"/>
                    <field name="contract_type_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" domain="[]" help="Contract Type" context="{'group_by':'contract_type_id'}" name="grouppertype"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Unit Stage Form View -->
        
        <record id="view_rem_unit_stage_form" model="ir.ui.view">
            <field name="name">rem.unit.stage.form</field>
            <field name="model">rem.unit.stage</field>
            <field name="arch" type="xml">
                <form string="Unit Stage">
	                <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Describe the unit ..."/></h1>
                        </div>
	                	<group>
	                	    <group>
	                	    	<field name="contract_type_id"/>
		                        <field name="create_date" string="Date"/>
		                        <field name="active"/>
	                        </group>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>
		
		<!-- Unit Stage Action Window -->
        
        <record id="action_rem_unit_stage" model="ir.actions.act_window">
            <field name="name">Unit Stage</field>
            <field name="res_model">rem.unit.stage</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_grouppertype': 1}</field>
	        <field name="help" type="html">
	            <p class="oe_view_nocontent_create">
	                Click to add a Unit Stage.
	            </p><p>
	                The Unit Stage are for the purpose of ???
	                allowing you to control the ....
	            </p>
	        </field>
        </record>

        <menuitem id="menu_rem_unit_stage" name="Unit Stage" parent="menu_rem_conf" action="action_rem_unit_stage" sequence="100"/>
        
        <!-- 
        	Real Estate Contract Type 
		-->
        <!-- Real Estate Contract Type Tree View -->

        <record id="view_re_contract_type_tree" model="ir.ui.view">
            <field name="name">contract.type.tree</field>
            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <tree string="Real Estate Contract Type">
                    <field name="name"/>
                </tree>
            </field>
        </record>

		<!-- Real Estate Contract Type Search View -->

        <record id="view_re_contract_type_filter" model="ir.ui.view">
            <field name="name">contract.type.filter</field>
            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <search string="Search Real Estate Contract Type">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Real Estate Contract Type Form View -->
        
        <record id="view_re_contract_type_form" model="ir.ui.view">
            <field name="name">contract.type.form</field>
            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <form string="Real Estate Contract Type">
	                <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Contract Type Description"/></h1>
                        </div>
	                	<group>
	                	    <group>
		                        <field name="create_date" string="Date"/>
		                        <field name="is_rent"/>
		                        <field name="active"/>
	                        </group>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>
		
		<!-- Real Estate Contract Type Action Window -->
        
        <record id="action_re_contract_type" model="ir.actions.act_window">
            <field name="name">Real Estate Contract Type</field>
            <field name="res_model">contract.type</field>
            <field name="view_mode">tree,form</field>
	        <field name="help" type="html">
	            <p class="oe_view_nocontent_create">
	                Click to add a Real Estate Contract Type.
	            </p><p>
	                The Real Estate Contract Type 
	                allowing you to define the type of contract
	                established for your units: rent, sale, share ...
	            </p>
	        </field>
        </record>

        <menuitem id="menu_re_contract_type" name="Real Estate Contract Type" parent="menu_rem_conf" action="action_re_contract_type" sequence="100"/>

        <!-- 
        	Unit Image 
		-->
        <!-- Unit Image Tree View -->

        <record id="view_rem_image_tree" model="ir.ui.view">
            <field name="name">rem.image.tree</field>
            <field name="model">rem.image</field>
            <field name="arch" type="xml">
                <tree string="Unit Image">
                    <field name="name"/>
                </tree>
            </field>
        </record>

		<!-- Unit Image Search View -->

        <record id="view_rem_image_filter" model="ir.ui.view">
            <field name="name">rem.image.filter</field>
            <field name="model">rem.image</field>
            <field name="arch" type="xml">
                <search string="Search Unit Image">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Unit Image Form View -->
        
        <record id="view_rem_image_form" model="ir.ui.view">
            <field name="name">rem.image.form</field>
            <field name="model">rem.image</field>
            <field name="arch" type="xml">
                <form string="Unit Image">
	                <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Describe the photo ..."/></h1>
                        </div>
	                	<group>
	                	    <group>
		                        <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image_medium"}'/>
	                        </group>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>
</data>
</openerp>