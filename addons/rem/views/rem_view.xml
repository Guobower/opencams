            <field name="model">contract.type</field>
            <field name="arch" type="xml">
                <form string="Offer Type">
	                <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Offer Type Description"/></h1>
                        </div>
	                	<group>
	                	    <group>
		                        <field name="create_date" string="Date"/>
		                        <field name="is_rent"/>
	                        </group>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>

