<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        
        <!--
        	Real Estate Asset
        -->

        <!-- Real Estate Asset Tree View -->
        <record id="view_rem_unit_tree" model="ir.ui.view">
            <field name="name">rem.unit.tree</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <tree string="Real Estate Unit">
                    <field name="display_name"/>
                    <field name="user_id"/>
                    <field name="contract_type_id"/>
                    <field name="living_area"/>
                    <field name="bedrooms"/>
                    <field name="bathrooms"/>
                    <field name="is_new"/>
                    <field name="stage_id"/>
                    <field name="has_lead_id" invisible="1"/>
                    <button name="action_select_unit" string="Select Unit" type="object" icon="gtk-apply"
                    		invisible="not context.get('from_lead_id', False)"
                    		attrs="{'invisible': [('has_lead_id','=', True)]}"/>
                    <button name="action_remove_unit" string="Remove Unit" type="object" icon="gtk-remove"
                    		invisible="not context.get('from_lead_id', False)"
                    		attrs="{'invisible': [('has_lead_id','!=', True)]}"/>
                </tree>
            </field>
        </record>

		<!-- Real Estate Asset Search View -->
        <record id="view_rem_unit_filter" model="ir.ui.view">
            <field name="name">rem.unit.filter</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <search string="Search Real Estate Unit">
                    <field name="display_name"/>
                    <!-- General Features -->
                    <field name="contract_type_id"/>
                    <field name="partner_id"/>
                    <field name="type_id"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="zip"/>
                    <field name="country_id"/> 
                    <field name='bedrooms'/>
                    <field name='bathrooms'/>
                    <field name='points_interest'/>
                    <field name='is_new'/>
                    <field name='latitude'/>
                    <field name='longitude'/>
                    <!-- Indoor Features -->
                    <field name="air_conditioned"/>
                    <field name="ducted_cooling"/>
                    <field name="wardrobes"/>
                    <field name="dishwasher"/>
                    <field name="living_areas"/>
                    <!-- Outdoor Features -->
                    <field name="backyard"/>
                    <field name="alarm"/>
                    <field name="entertaining"/>
                    <field name="sw_pool"/>
                    <field name="garages"/>
                    <field name="secure_parking"/>
                    <field name="dog_friendly"/>
                    <separator/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                    	<filter string="My Units" name="my" domain="[('user_id', '=', uid)]"/>
                    	<filter name="forsale" string="For Sale" domain="[('is_rent','=',0)]" help = "Units to sell"/>
                    	<filter name="forrent" string="For Rent" domain="[('is_rent','=', 1)]" help = "Rentable units"/>
                    	<filter name="inactives" string="Inactives" domain="[('active','=',0)]" help = "Inactive units"/>
                    	<filter name="unpublished" string="Unpublished" domain="[('website_published','=',0)]" help = "Unpublished units"/>
                        <filter string="Offer Type" icon="terp-partner" domain="[]" help="Offer type (e.g. buy, rent, ..)" context="{'group_by':'contract_type_id'}"/>
                        <filter string="Bedrooms" icon="terp-partner" domain="[]" context="{'group_by':'bedrooms'}"/>
                        <filter string="Salesman" icon="terp-partner" domain="[]" help="Salesman" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Real Estate Asset Form View -->
		<record id="view_rem_unit_form" model="ir.ui.view">
			<field name="name">rem.unit.form</field>
			<field name="model">rem.unit</field>
			<field name="arch" type="xml">
				<form string="Real Estate Unit">
					<header>
                        <button	name="add_feature" type="object" attrs="{'invisible': [('is_featured', '=', True)]}" string="Add to Featured" class="oe_highlight o_wow"/>
                        <button	name="remove_feature" type="object" attrs="{'invisible': [('is_featured', '=', False)]}" string="Remove from Featured"  class="oe_highlight"/>
                        <field name="stage_id" widget="statusbar" clickable="True" domain="[('contract_type_id', '=', contract_type_id)]"/>
					</header>
					<sheet>
                        <div class="oe_button_box" name="button_box">
	                        <button class="oe_stat_button" type="object"
	                            name="get_unit_events"
	                            icon="fa-calendar">
	                            <field string="Appointment(s)" name="event_ids_count" widget="statinfo"/>
	                        </button>
	                        <button class="oe_stat_button" type="action"
	                            name="%(rem.unit_listing_contract)d"
	                            icon="fa-file-text"
	                            context="{'default_unit_id': active_id,'search_default_unit_id': active_id}">
	                            <field string="Contracts" name="listing_contract_count" widget="statinfo"/>
	                        </button>
                            <button class="oe_stat_button" name="website_publish_button"
                                type="object" icon="fa-globe">
                                <field name="website_published" widget="website_button"/>
                            </button>
                        </div>
						<div class="oe_title">
							<label for="display_name" class="oe_edit_only"/>
							<h1>
								<field name="display_name" />
							</h1>
						</div>
						<group>
							<group>
								<field name="contract_type_id"/>
								<field name="current_contract_id"/>
								<field name="partner_id" context="{'search_default_seller':1, 'default_seller':1}"/>
								<field name="price"/>
								<field name="is_rent" invisible="1"/>
								<field name="rent_unit" attrs="{'invisible': [('is_rent', '=', False)]}"/>
			                    <label for="street" string="Address"/>
			                    <div class="o_address_format">
			                        <field name="street" placeholder="Street..." class="o_address_street"/>
			                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
			                        <field name="city_id" placeholder="City" class="o_address_city"/>
                                    <field name="zone_id" placeholder="Zone"/>
			                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
			                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
			                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
			                    </div>
							</group>
							<group>
                                <field name="create_date"/>
                                <field name="user_id" placeholder="Salesperson"/>
								<field name="active" readonly="1"/>
                                <field name="feature_id" invisible="1"/>
                                <field name="is_featured" placeholder="Is Featured"/>
                                <field name="is_new"/>
                                <field name='latitude'/>
                                <field name='longitude'/>
							</group>
						</group>
                        <div>
                            <label for="description"/>
                            <field name='description' widget="html" placeholder="Add some important details about your unit ..."/>
                        </div>
						<notebook>
                            <page string="General Features">
                                <group>
                                    <group>
                                        <field name="bedrooms"/>
                                        <field name="bathrooms"/>
                                        <field name='living_area'/>
                                        <field name='land_area'/>
                                    </group>
                                    <group>
                                        <field name='points_interest' widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Indoor Features">
                                <group>
                                    <group>
                                        <field name='air_conditioned'/>
                                        <field name='ducted_cooling'/>
                                        <field name='wardrobes'/>
                                        <field name='dishwasher'/>
                                    </group>
                                    <group>
                                        <field name='living_areas'/>
                                    </group>
                                </group>
                            </page>
                            <page string="Outdoor Features">
                                <group>
                                    <group>
                                        <field name='backyard'/>
                                        <field name='alarm'/>
                                        <field name='sw_pool'/>
                                        <field name='entertaining'/>
                                    </group>
                                    <group>
                                        <field name='garages'/>
                                        <field name='secure_parking'/>
                                        <field name='dog_friendly'/>
                                    </group>
                                </group>
                            </page>
							<page string="Photos">
								<group>
									<field name="image_ids" mode="kanban" nolabel="1" context="{'default_unit_id': active_id}">
										<kanban>
											<field name="name"/>
											<field name="image"/>
											<field name="image_medium"/>
											<field name="unit_id"/>
											<templates>
												<t t-name="kanban-box">
													<div class="oe_kanban_global_click" style="position: relative">
														<a t-if="! read_only_mode" type="delete"
															style="position: absolute; right: 0; padding: 4px; display: inline-block">X</a>
														<div class="oe_module_vignette">
															<img
																t-att-src="kanban_image('rem.image', 'image_medium', record.unit_id.raw_value)"
																t-att-title="record.name.value"  
																class="img-responsive"/>
														</div>
													</div>
												</t>
											</templates>
										</kanban>
									</field>
								</group>
							</page>
                            <page string="Neighborhood Contact List">
                                <field name="neighborhood_id" widget="one2many_list">
                                    <tree string="Neighborhood Contact" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="comment"/>
                                        <field name="partner_id" context='{"default_customer": "False", "default_is_neighbor": "True"}'/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

