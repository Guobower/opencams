<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

        <!--
        	Real Estate Asset
        -->

        <!-- Real Estate Asset Tree View -->
        <record id="view_rem_unit_tree" model="ir.ui.view">
            <field name="name">rem.unit.tree</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <tree string="Real Estate Unit">
                    <field name="name"/>
                </tree>
            </field>
        </record>

		<!-- Real Estate Asset Search View -->
        <record id="view_rem_unit_filter" model="ir.ui.view">
            <field name="name">rem.unit.filter</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <search string="Search Real Estate Unit">
                    <field name="name"/>
                    <!-- General Features -->
                    <field name='contract_type_id'/>
                    <field name='type_id'/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="zip"/>
                    <field name="country_id"/> 
                    <field name='bedrooms'/>
                    <field name='bathrooms'/>
                    <field name='points_interest'/>
                    <field name='is_new'/>
                    <!-- Indoor Features -->
                    <field name='air_conditioned'/>
                    <field name='ducted_cooling'/>
                    <field name='wardrobes'/>
                    <field name='dishwasher'/>
                    <field name='living_areas'/>
                    <!-- Outdoor Features -->
                    <field name='backyard'/>
                    <field name='alarm'/>
                    <field name='entertaining'/>
                    <field name='sw_pool'/>
                    <field name='garages'/>
                    <field name='secure_parking'/>
                    <field name='dog_friendly'/>
                    <separator/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Salesman" icon="terp-partner" domain="[]" help="Salesman" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Real Estate Asset Form View -->
		<record id="view_rem_unit_form" model="ir.ui.view">
			<field name="name">rem.unit.form</field>
			<field name="model">rem.unit</field>
			<field name="arch" type="xml">
				<form string="Real Estate Unit">
					<header>
						<field name="stage_id" widget="statusbar" clickable="True"/>
                        <button	name="add_feature" type="object" attrs="{'invisible': [('is_featured', '=', True)]}" string="Add to Features"/>
                        <button	name="remove_feature" type="object" attrs="{'invisible': [('is_featured', '=', False)]}" string="Remove from Features"/>
					</header>
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only"/>
							<h1>
								<field name="name" placeholder="Describe the unit ..."/>
							</h1>
						</div>
						<group>
							<group>
								<field name="contract_type_id"/>
								<field name="price"/>
								<field name="is_rent" invisible="1"/>
								<field name="rent_unit" attrs="{'invisible': [('is_rent', '=', False)]}"/>
			                    <label for="street" string="Address"/>
			                    <div class="o_address_format">
			                        <field name="street" placeholder="Street..." class="o_address_street"/>
			                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
			                        <field name="city_id" placeholder="City" class="o_address_city"/>
                                    <field name="zone_id" placeholder="Zone"/>
			                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
			                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
			                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
			                    </div>
							</group>
							<group>
                                <field name="create_date"/>
                                <field name="user_id" placeholder="Salesman"/>
								<field name="active"/>
                                <field name="feature_id" invisible="1"/>
                                <field name="is_featured" placeholder="Is Featured"/>
                                <field name="is_new"/>
							</group>
						</group>
                        <div>
                            <label for="unit_description"/>
                            <field name='unit_description' widget="html" placeholder="Add some important details about your unit ..."/>
                        </div>
						<notebook>
                            <page string="General Features">
                                <group>
                                    <group>
                                        <field name="bedrooms"/>
                                        <field name="bathrooms"/>
                                        <field name='living_area'/>
                                        <field name='land_area'/>
                                    </group>
                                    <group>
                                        <field name='points_interest' widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Indoor Features">
                                <group>
                                    <group>
                                        <field name='air_conditioned'/>
                                        <field name='ducted_cooling'/>
                                        <field name='wardrobes'/>
                                        <field name='dishwasher'/>
                                    </group>
                                    <group>
                                        <field name='living_areas'/>
                                    </group>
                                </group>
                            </page>
                            <page string="Outdoor Features">
                                <group>
                                    <group>
                                        <field name='backyard'/>
                                        <field name='alarm'/>
                                        <field name='sw_pool'/>
                                        <field name='entertaining'/>
                                    </group>
                                    <group>
                                        <field name='garages'/>
                                        <field name='secure_parking'/>
                                        <field name='dog_friendly'/>
                                    </group>
                                </group>
                            </page>
							<page string="Photos">
								<group>
									<field name="image_ids" mode="kanban" nolabel="1" context="{'default_unit_id': active_id}">
										<kanban>
											<field name="name"/>
											<field name="image"/>
											<field name="image_medium"/>
											<field name="unit_id"/>
											<templates>
												<t t-name="kanban-box">
													<div class="oe_kanban_global_click" style="position: relative">
														<a t-if="! read_only_mode" type="delete"
															style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
														<div class="oe_module_vignette">
															<img
																t-att-src="kanban_image('rem.image', 'image_medium', record.unit_id.raw_value)"
																t-att-title="record.unit_id.value"  
																class="img-responsive"/>
															<div class="oe_module_desc">
																<field name="name"/>
															</div>
														</div>
													</div>
												</t>
											</templates>
										</kanban>
									</field>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

