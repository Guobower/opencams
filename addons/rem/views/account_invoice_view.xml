<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_invoice_form_rem_inherit" model="ir.ui.view">
            <field name="name">view.invoice.form.rem.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='partner_id']" position="after">
                        <field name="tenant_contract_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="unit_ids" widget="many2many_tags"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>
