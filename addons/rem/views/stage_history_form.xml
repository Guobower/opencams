<?xml version="1.0"?>
<odoo>
    <data>
        <record id="stage_history_template_tree_view" model="ir.ui.view">
            <field name="name">stage.history.tree</field>
            <field name="model">stage.history</field>
            <field name="arch" type="xml">
                <tree create="false" string="Stage History" default_order="date desc" readonly="1">
                    <field name='create_date' string="Date"/>
                    <field name='stage_id' string="Old Stage"/>
                    <field name='new_stage' string="New Stage"/>
                    <field name='user_id' string="Done by"/>
                    <field name='lead_id' invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
