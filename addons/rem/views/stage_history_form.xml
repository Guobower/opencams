<?xml version="1.0"?>
<openerp>
    <data>


        <record id="stage_action" model="ir.actions.act_window">
            <field name="name">Stage History</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stage.history</field>
            <field name="view_mode">tree</field>
            <field name="view_type">form</field>
            <field name="view_id" eval="False"/>
           
        </record>

        <menuitem id="stage_menu"
            action="stage_action" parent="base.menu_sales"
            sequence="20"/>
        
        <record id="stage_history_template_tree_view" model="ir.ui.view">
            <field name="name">stage.history.tree</field>
            <field name="model">stage.history</field>
            <field name="arch" type="xml">
                <tree create="false" string="Stage History" default_order="date desc">
                    <field name="name" string="Lead Name"/>
                    <field name='stage_id' string="Old Stage"/>
                    <field name='new_stage' string="New Stage"/>
                    <field name="date"/>
                    <field name='user_login' string="Done by"/>
                </tree>
            </field>
        </record>



    </data>
</openerp>

