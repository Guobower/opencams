<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <!--
        	Tenant / Renting Contract
        -->

        <!-- Tenant Contract Tree View -->
        <record id="view_rem_tenant_contract_tree" model="ir.ui.view">
            <field name="name">rem.tenant.contract.tree</field>
            <field name="model">rem.tenant.contract</field>
            <field name="arch" type="xml">
                <tree string="Tenant Contract" decoration-info="reservation is True" >
                	<field name="partner_id"/>
                	<field name="type_id"/>
                    <field name="current"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="notice_date"/>
                    <field name="reservation"/>
                </tree>
            </field>
        </record>

		<!-- Tenant Contract Search View -->
        <record id="view_rem_tenant_contract_filter" model="ir.ui.view">
            <field name="name">rem.tenant.contract.filter</field>
            <field name="model">rem.tenant.contract</field>
            <field name="arch" type="xml">
                <search string="Tenant Contract">
                	<field name="partner_id"/>
                	<field name="type_id"/>
                	<field name="unit_id"/>
                    <field name="current"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="notice_date"/>
                    <field name="reservation"/>
                </search>
            </field>
        </record>
        
        <!-- Tenant Contract Form View -->
        <record id="view_rem_tenant_contract_form" model="ir.ui.view">
            <field name="name">rem.tenant.contract.form</field>
            <field name="model">rem.tenant.contract</field>
            <field name="arch" type="xml">
                <form string="Tenant Contracts">
	                <sheet>
						<div class="oe_button_box" name="button_box">
	                        <button class="oe_stat_button" type="object"
	                            name="get_sale_orders"
	                            attrs="{'invisible': [('order_ids_count', '=', 0)]}"
	                            icon="fa-usd">
	                            <field string="Sale(s)" name="order_ids_count" widget="statinfo"/>
	                        </button>
	                    </div>
	                    <div class="oe_title">
	                        <h1>
	                            <field name="display_name" readonly="1"/>
	                        </h1>
	                    </div>
                		<group>
		                	<group>
		                		<field name="type_id"/>
		                		<field name="unit_id" readonly="True"/>
		                		<field name="partner_id" context="{'search_default_tenant':1, 'default_tenant':1}"/>
	                            <field name="date_start"/>
	                            <field name="period"/>
	                            <field name="period_unit"/>
			                    <field name="date_end"/>
		                    </group>
		                	<group>
		                		<field name="current" readonly="1"/>
			                    <field name="auto_renew"/>
			                    <field name="notice_date" attrs="{'invisible':[('auto_renew','=',False)]}"/>
			                    <field name="notice_period" attrs="{'invisible':[('auto_renew','=',False)]}"/>
			                    <field name="notice_period_unit" attrs="{'invisible':[('auto_renew','=',False)]}"/>
			                    <field name="reservation"/>
			                    <button 
			                    	type="object"
			                    	name="create_sale_order"
			                    	string="Create Sale Order"
			                    	attrs="{'invisible': [('order_ids_count', '>', 0)]}"
			                    	class="oe_link oe_inline"/>
		                    </group>
	                    </group>
	                    <notebook>
		                    <page string="Attachments">
		                    	<field readonly="1" name="attachment_ids" nolabel="1" widget="many2many_kanban">
				                <kanban>
				                    <field name="id"/>
				                    <field name="mimetype"/>
				                    <field name="type"/>
				                    <field name="datas_fname"/>
				                    <field name="name"/>
				                    <templates>
				                        <t t-name="kanban-box">
				                            <div class="oe_kanban_card">
				                                <div class="oe_kanban_vignette">
				                                    <div class="oe_attachment">
				                                        <div class="oe_name">
				                                            <field name="name"/>
				                                        </div>
				                                        <div t-if="record.type.raw_value == 'binary'">
				                                            <a t-attf-href="/web/content/#{record.id.value}?download=1">
				                                                <t t-set="webimage" t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>
				                                                <div t-if="!webimage" class="o_image" t-att-data-mimetype="record.mimetype.value"/>
				                                                <div t-if="webimage" class="o_kanban_attachment_image">
				                                                    <img t-attf-src="/web/image/#{record.id.value}?download=1"/>
				                                                </div>
				                                            </a>
				                                        </div>
				                                    </div>
				                                </div>
				                            </div>
				                        </t>
				                    </templates>
				                </kanban>
		                    	</field>
		                    </page>
	                    </notebook>
	                </sheet>
	                <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>
                </form>
            </field>
        </record>
        
        <!-- Tenant Contract Calendar View -->
        <record id="view_rem_tenant_contract_calendar" model="ir.ui.view">
            <field name="name">rem.tenant.contract.calendar</field>
            <field name="model">rem.tenant.contract</field>
            <field name="arch" type="xml">
                <calendar string="Tenant Contracts" date_start="date_start" allday="1" mode="month"
                	date_stop="date_end" display="[display_name]" color="reservation" quick_add="False"
                	event_open_popup="%(rem.view_rem_tenant_contract_form)s">
                    <field name="display_name"/>
                    <field name="partner_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </calendar>
            </field>
        </record>

	    <record model="ir.actions.act_window" id="unit_tenant_contract">
	        <field name="name">Tenant Contracts</field>
	        <field name="res_model">rem.tenant.contract</field>
	        <field name="view_mode">tree,calendar,form</field>
	        <field name="domain">[('unit_id','=',active_id)]</field>
	        <field name="context">{'default_unit_id': active_id}</field>
	        <field name="help" type="html">
	            <p>
	                Unit Tenant Contracts will help you to manage your renewals.
	            </p><p>
	                You will be able to keep track of your tenants.
	            </p>
	        </field>
	    </record>
	    
