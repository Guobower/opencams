<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

        <!-- Top menu item -->
        <menuitem name="Listings"
            id="menu_rem"
            groups="base.group_user"
            sequence="7"/>
		<menuitem id="menu_rem_obj" parent="menu_rem" name="Properties" sequence="10"/>
		<menuitem id="menu_rem_contact" parent="menu_rem" name="Contacts" sequence="20"/>
		<menuitem id="menu_rem_conf" parent="menu_rem" name="Configuration" sequence="30"/>

		<!--
        	Unit
        -->

		<!-- Real Estate Asset Action Window -->
        <record id="action_rem_unit" model="ir.actions.act_window">
            <field name="name">For Sale</field>
            <field name="res_model">rem.unit</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_forsale':True}</field>
	        <field name="help" type="html">
	            <p class="oe_view_nocontent_create">
	                Click to list a new unit.
	            </p><p>
	                The real estate units / listing can be rentable or sellable
	                being owned or just commissioned by your company.
	            </p>
	        </field>
        </record>
		
		<menuitem id="menu_rem_obj_unit" parent="menu_rem_obj" action="action_rem_unit" sequence="10"/>
		
		<!-- Real Estate Asset Action Window -->
        <record id="action_rem_unit_rent" model="ir.actions.act_window">
            <field name="name">For Rent</field>
            <field name="res_model">rem.unit</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="context">{'search_default_forrent':True}</field>
	        <field name="help" type="html">
	            <p class="oe_view_nocontent_create">
	                Click to list a new unit.
	            </p><p>
	                The real estate units / listing can be rentable or sellable
	                being owned or just commissioned by your company.
	            </p>
	        </field>
        </record>

        <menuitem id="menu_rem_obj_unit_rent" parent="menu_rem_obj" action="action_rem_unit_rent" sequence="15"/>
        
		<!-- All menu -->
        <record id="action_partner_remall_form" model="ir.actions.act_window">
            <field name="name">All</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_res_partner_realestate_filter_inherit"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Helps you easily track all activities related to
                a buyer; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        
        <menuitem id="menu_rem_obj_buyer" parent="menu_rem_contact" action="action_partner_remall_form" sequence="10"/>
        
		<!-- Buyers menu -->
        <record id="action_partner_buyer_form" model="ir.actions.act_window">
            <field name="name">Buyers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_buyer":1,"default_buyer":1}</field>
            <field name="search_view_id" ref="view_res_partner_realestate_filter_inherit"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a buyer; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        
        <menuitem id="menu_rem_obj_buyer" parent="menu_rem_contact" action="action_partner_buyer_form" sequence="20"/>
        
		<!-- Seller menu -->
        <record id="action_partner_seller_form" model="ir.actions.act_window">
            <field name="name">Sellers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_seller":1,"default_seler":1}</field>
            <field name="search_view_id" ref="view_res_partner_realestate_filter_inherit"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a seller; discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        
        <menuitem id="menu_rem_obj_seller" parent="menu_rem_contact" action="action_partner_seller_form" sequence="30"/>

		<!-- Configuration menus -->
		



	</data>
</openerp>