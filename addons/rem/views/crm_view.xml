<?xml version="1.0"?>
<openerp>
    <data>

        <!-- CRM Opportunities Form View -->
        <record id="view_crm_opportunity_rem_unit_form" model="ir.ui.view">
            <field name="name">crm.lead.rem.unit.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="unit_lead" widget="many2many_tags"/>
                    <field name="re_reason"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
	                <button class="oe_stat_button" type="object"
	                    name="action_stage_history" icon="fa-history" string="History">
	                </button>
	            </xpath>
                <xpath expr="//notebook/page[1]" position="before">
                	<page string="Searches for">
                		<div class="oe_button_box" name="button_box2">
		                	<button class="oe_stat_button" type="object"
			                    name="action_find_matching_units" icon="fa-search" string="Find Units">
			                </button>
		                </div>
	                	<group string="General Features">
                            <group>
    	                		<field name="re_contract_type_id"/>
    	                		<field name="re_type" widget="many2many_tags"/>
    	                		<field name='re_min_bedrooms'/>
                                <field name='re_max_bedrooms'/>
    	                		<field name='re_bathrooms'/>
                            </group>
                            <group>
    	                		<field name="re_city"/>
                                <field name='re_points_interest' widget="many2many_tags"/>
                                <field name='re_is_new'/>
                            </group>
	                	</group>
                        <group string="Indoor Features">
                            <group>
                                <field name='re_air_conditioned'/>
                                <field name='re_ducted_cooling'/>
                                <field name='re_wardrobes'/>
                                <field name='re_dishwasher'/>
                            </group>
                            <group>
                                <field name='re_living_areas'/>
                            </group>
                        </group>
                        <group string="Outdoor Features">
                            <group>
                                <field name='re_backyard'/>
                                <field name='re_alarm'/>
                                <field name='re_entertaining'/>
                                <field name='re_pool'/>
                            </group>
                            <group>
                                <field name='re_garage_spaces'/>
                                <field name='re_secure_parking'/>
                                <field name='re_dog_friendly'/>
                            </group>
                        </group>
                	</page>   
                </xpath>
              
            </field>
        </record>

    </data>
</openerp>

