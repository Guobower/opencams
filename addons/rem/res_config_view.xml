<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--
        	Custom Fields
		-->

        <record id="action_re_ir_model_fields" model="ir.actions.act_window">
            <field name="name">Custom Fields</field>
            <field name="res_model">ir.model.fields</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'manual')]</field>
            <field name="context" eval="{'default_model_id': ref('rem.model_rem_unit')}"/>
            <field name="view_id" ref="view_model_fields_tree_rem_1"/>
        </record>

        <!--
            Location Preferences
        -->

        <record id="action_location_preferences" model="ir.actions.act_window">
            <field name="name">Location Preferences</field>
            <field name="res_model">location.preferences</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Location Preferences.
                </p>
                <p>
                    The Location Preferences are for the purpose of ???
                    allowing you to control the ....
                </p>
            </field>
        </record>

        <!--
        	Unit City
        -->

        <record id="action_rem_unit_city" model="ir.actions.act_window">
            <field name="name">Unit City</field>
            <field name="res_model">rem.unit.city</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Unit City.
                </p>
                <p>
                    The Unit City are for the purpose of ???
                    allowing you to control the ....
                </p>
            </field>
        </record>

        <!--
            Unit Zone
        -->

        <record id="action_rem_unit_zone" model="ir.actions.act_window">
            <field name="name">Unit Zone</field>
            <field name="res_model">rem.unit.zone</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Unit Zone.
                </p>
                <p>
                    The Unit Zone are for the purpose of ???
                    allowing you to control the ....
                </p>
            </field>
        </record>

        <!--
        	Unit Type
        -->

        <record id="action_rem_unit_type" model="ir.actions.act_window">
            <field name="name">Unit Type</field>
            <field name="res_model">rem.unit.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Unit Type.
                </p>
                <p>
                    The Unit Type allow you to configure
                    your Real estate unit types
                </p>
            </field>
        </record>

        <!--
        	Offer Type
		-->

        <record id="action_re_offer_type" model="ir.actions.act_window">
            <field name="name">Offer Type</field>
            <field name="res_model">offer.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Real Estate Offer Type.
                </p>
                <p>
                    The Offer Type allow you to define the type
                    of offer (e.g. buy, rent ..) established for your units.
                </p>
            </field>
        </record>

        <!--
        	Unit Stage
		-->

        <record id="action_rem_unit_stage" model="ir.actions.act_window">
            <field name="name">Stage</field>
            <field name="res_model">rem.unit.stage</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_grouppertype': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Unit Stage.
                </p>
                <p>
                    The Unit Stage are for the purpose of ???
                    allowing you to control the ....
                </p>
            </field>
        </record>

        <!--
            Reason for Buy
        -->

        <record id="action_reason_for_buy" model="ir.actions.act_window">
            <field name="name">Reason for buy/rent</field>
            <field name="res_model">reason.for.buy</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a reason for buy/rent.
                </p>
                <p>
                    The Reason for buy/rent are for allowing
                    you to understand your customer motivations.
                    This will allow you to redefine your targets
                    and better refine your strategy.
                </p>
            </field>
        </record>

        <!--
            Real Estate Structures (Buildings and Condos)
        -->

        <record id="action_rem_structure" model="ir.actions.act_window">
            <field name="name">Building / Condo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rem.structure</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Real Estate Structures (Buildings and Condos)
                </p>
                <p>
                    Real Estate Structures (Buildings and Condos)
                    will allow grouping units in their respective
                    buildings or condos. This will also establish
                    a base for creating reports on these groupings.
                </p>
            </field>
        </record>

        <!--
            REM Settings
        -->

        <record id="view_rem_config_settings" model="ir.ui.view">
            <field name="name">rem settings</field>
            <field name="model">rem.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Real Estate Management" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>

                    <group string="General Settings">
                        <label for="id" string="Setup options"/>
                        <div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_re_offer_type)d"
                                            string="Configure type of offer (e.g. buy, rent, co-share ...)"
                                            help="This setting will allow you to configure the type of operations to implement in the system (e.g. buy, rent, holiday-rent, co-share ..)"
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_rem_unit_type)d"
                                            string="Configure unit types (e.g. flat, townhouse, villas ...)"
                                            help="Configure unit types (e.g. flat, townhouse, villas ...), helping your customers to chose the best option for their needs."
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_rem_unit_stage)d"
                                            string="Configure stages of the unit (e.g. contract, staging, available)"
                                            help="Depending on the type of offer, the unit will have different stages (e.g. contract, staging, available, sold for Buy offer or: in refurbishment, available, occupied for Rent)"
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_reason_for_buy)d"
                                            string="Configure Reasons for buy"
                                            help="Reason for buy/rent(engage) are for allowing you to understand your customer motivations.You can find this field in the CRM Opportunities and will allow you to redefine your targets and better refine your strategy"
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                        </div>
                        <label for="id" string="Location options"/>
                        <div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_rem_unit_city)d"
                                            string="Configure the cities where you will have your listings."
                                            help="Configure the cities where you will have your listings."
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_rem_unit_zone)d"
                                            string="Configure the city zones (e.g. Prospect Heights-Brooklyn-Riverdale, The Bronx ...)"
                                            help="Configure the city zones (e.g. Prospect Heights-Brooklyn, Riverdale-The Bronx ...) zones can include boroughs or neighborhoods, they should be setup in one unique set."
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_location_preferences)d"
                                            string="Location preferences used in the CRM Leads/Opportunities"
                                            help="Location preferences selected by the buyers/tenants in the CRM Leads/Opportunities"
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_rem_structure)d"
                                            string="Structures for buildings and condos"
                                            help="Structures will allow to define tree structures for buildings and condos"
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                        </div>
                        <label for="id" string="Other options"/>
                        <div>
                            <div>
                                <div>
                                    <field name="group_use_buyer_contracts" class="oe_inline"/>
                                    <label for="group_use_buyer_contracts"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_rent_table)d"
                                            string="Rent discount tables for seasons (e.g. highest, high, low, lowest seasons)"
                                            help="Setting season discounts allow you to implement season prices"
                                            class="oe_link btn-link"/>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <button type="action" name="%(action_re_ir_model_fields)d"
                                            string="Unit fields customization"
                                            help="Unit customizable fields, allows to define extra fields in the real estate unit."
                                            class="oe_link btn-link"/>
                                </div>
                            </div>

                        </div>
                    </group>
                    <group string="Website Configuration" name="website_configuration">
                        <label for="id" string="Options"/>
                        <div>
                            <div>
                                <div>
                                    <field name="module_website_residential" class="oe_inline"/>
                                    <label for="module_website_residential"/>
                                </div>
                            </div>
                        </div>
                    </group>
                    <group string="Update Module" name="update_module">
                        <button name="button_immediate_upgrade" string="Update" type="object"
                                confirm="Do you want to update the module?" class="btn btn-primary"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
