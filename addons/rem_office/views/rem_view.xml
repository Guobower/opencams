<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--
            Real Estate Asset
        -->

        <!-- Real Estate Asset Tree View -->
        <record id="view_rem_residential_unit_tree" model="ir.ui.view">
            <field name="name">rem.res.unit.tree</field>
            <field name="model">rem.unit</field>
            <field name="inherit_id" ref="rem.view_rem_unit_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rent_uom_id']" position="after">
                    <field name="people"/>
                    <field name="area"/>
                    <field name="seats"/>
                </xpath>
            </field>
        </record>

        <!-- Real Estate Asset Search View -->
        <record id="view_rem_residential_unit_filter" model="ir.ui.view">
            <field name="name">rem.res.unit.filter</field>
            <field name="model">rem.unit</field>
            <field name="inherit_id" ref="rem.view_rem_unit_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_new']" position="after">
                    <separator/>
                    <field name="people"/>
                    <field name="area"/>
                    <field name="seats"/>
                    <field name="windows"/>
                    <field name="desk_phones"/>
                </xpath>
                <xpath expr="//filter[@name='offertype']" position="after">
                    <filter string="People" icon="terp-partner" domain="[]" context="{'group_by':'people'}"/>
                    <filter string="Seats" icon="terp-partner" domain="[]" context="{'group_by':'seats'}"/>
                    <filter string="Windows" icon="terp-partner" domain="[]" context="{'group_by':'Windows'}"/>
                    <filter string="Desk Phones" icon="terp-partner" domain="[]" context="{'group_by':'desk_phones'}"/>
                </xpath>
            </field>
        </record>

        <!-- Real Estate Asset Form -->
        <record id="view_rem_residential_unit_form" model="ir.ui.view">
            <field name="name">rem.res.unit.form</field>
            <field name="model">rem.unit</field>
            <field name="inherit_id" ref="rem.view_rem_unit_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='get_geo_coordinates']" position="after">
                    <field name="people"/>
                    <field name="area"/>
                    <field name="seats"/>
                    <field name="windows"/>
                    <field name="desk_phones"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
