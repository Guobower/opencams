<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Home Owners View -->

        <record model="ir.ui.view" id="partner_view_cams_form">
            <field name="name">partner.view.community.association.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <!--<div name="button_box" position="inside">-->
                <!--</div>-->

                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Community Association" name="community_association">
                        <group>

                        </group>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="action_contacts_cams" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your contacts directory.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>
        <record id="action_contacts_view_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
            <field name="act_window_id" ref="action_contacts_cams"/>
        </record>
        <record id="action_contacts_view_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_partner_tree"/>
            <field name="act_window_id" ref="action_contacts_cams"/>
        </record>
        <record id="action_contacts_view_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="partner_view_cams_form"/>
            <field name="act_window_id" ref="action_contacts_cams"/>
        </record>

    </data>
</odoo>
