<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- CRM Opportunities Form View -->
        <record id="view_calendar_event_calendar_rem" model="ir.ui.view">
            <field name="name">Meeting</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_calendar"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ids']" position="after">
                    <field name="unit_ids"/>
                </xpath>
            </field>
        </record>

        <record id="action_calendar_event_rem_unit" model="ir.actions.act_window">
            <field name="name">Create Meetings/Showings</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="view_id" ref="calendar.view_calendar_event_calendar"/>
            <field name="search_view_id" ref="calendar.view_calendar_event_search"/>
            <field name="context">{'default_unit_ids': active_ids}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to schedule a new meeting.
                </p>
                <p>
                    The calendar is shared between employees and fully integrated with
                    other applications such as the employee holidays or the business
                    opportunities.
                </p>
            </field>
        </record>

        <!-- Real Estate Asset Action Window   -->
        <act_window id="action_rem_unit_event_multi"
            multi="True"
            key2="client_action_multi" name="Appointment(s)"
            res_model="rem.unit" src_model="rem.unit"
            view_mode="form" target="new" view_type="form" />

    </data>
</odoo>
