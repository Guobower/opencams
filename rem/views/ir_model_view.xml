<?xml version="1.0"?>
<odoo>
    <data>

        <!--
        	Custom Fields
		-->

        <record id="view_model_fields_tree_rem_1" model="ir.ui.view">
            <field name="model">ir.model.fields</field>

            <field name="arch" type="xml">
                <tree string="Fields" editable="top">
                    <field name="name"/>
                    <field name="field_description"/>
                    <field name="ttype" domain="[('state', '=', 'manual')]"/>
                    <field name="help"/>
                    <field name="selection"/>
                    <field name="rem_category" required="True"/>
                    <field name="model_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_model_fields_form_rem" model="ir.ui.view">
            <field name="name">ir.model.fields.inherit</field>
            <field name="model">ir.model.fields</field>
            <field name="inherit_id" ref="base.view_model_fields_form"/>
            <field name="arch" type="xml">
                <xpath expr="(//sheet/group/group)[2]" position="inside">
                    <field name="rem_category"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
