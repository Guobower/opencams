<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--
        	Real Estate Structures (buildings and condos)
		-->
        <!-- Real Estate Structures Tree View -->
        <record id="rem_structure_tree" model="ir.ui.view">
            <field name="name">Building / Condo</field>
            <field name="model">rem.structure</field>
            <field name="arch" type="xml">
                <tree string="Building / Condo">
                    <field name="display_name"/>
                </tree>
            </field>
        </record>

        <!-- Real Estate Structures Search View -->
        <record id="rem_structure_search" model="ir.ui.view">
            <field name="name">Building / Condo</field>
            <field name="model">rem.structure</field>
            <field name="arch" type="xml">
                <search string="Building / Condo">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Real Estate Structures Form View -->
        <record id="rem_structure_form" model="ir.ui.view">
            <field name="name">Building / Condo</field>
            <field name="model">rem.structure</field>
            <field name="arch" type="xml">
                <form string="Building / Condo">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="get_units"
                                    attrs="{'invisible': [('unit_ids_count', '=', 0)]}"
                                    icon="fa-home" help="Units contained by this structure (for sell or for rent)">
                                <field string="Unit(s)" name="unit_ids_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="is_view"/>
                        </group>
                        <group>
                            <group>
                                <!-- Address -->
                                <label for="street" string="Address"
                                       attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                                <div class="o_address_format" attrs="{'invisible': [('parent_id', '!=', False)]}">
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                           attrs="{'required': [('parent_id', '=', False)]}"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city_id" placeholder="City" class="o_address_city"
                                           attrs="{'required': [('parent_id', '=', False)]}"/>
                                    <field name="zone_id" placeholder="Zone"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                           attrs="{'required': [('parent_id', '=', False)]}"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <!-- Geo -->
                                <field name='latitude' attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                                <field name='longitude' attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                                <button name="get_geo_coordinates" type="object"
                                        attrs="{'invisible': ['|', '|', '|', '|', '|', ('parent_id', '!=', False), ('street', '=', False), ('zip', '=', False), ('city_id', '=', False), ('state_id', '=', False), ('country_id', '=', False)]}"
                                        string="Get Coordinates" colspan="2" icon="fa-check"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban View Adjustment -->
        <template id="rem_assets_backend" name="web_kanban assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/rem/static/src/css/kanban.css"/>
            </xpath>
        </template>

        <!-- 
        	Seasonal Rates 
		-->
        <!-- Seasonal Rates Tree View -->

        <record model="ir.ui.view" id="view_rent_table_tree">
            <field name="name">season.rates.tree</field>
            <field name="model">season.rates</field>
            <field name="arch" type="xml">
                <tree string="Seasonal Rates">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Seasonal Rates Search View -->

        <record id="view_rent_table_filter" model="ir.ui.view">
            <field name="name">season.rates.filter</field>
            <field name="model">season.rates</field>
            <field name="arch" type="xml">
                <search string="Search Seasonal Rates">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Seasonal Rates Form View -->

        <record model="ir.ui.view" id="view_rent_table_form">
            <field name="name">season.rates.form</field>
            <field name="model">season.rates</field>
            <field name="arch" type="xml">
                <form string="Seasonal Rates">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Describe the discount table"/>
                            </h1>
                        </div>
                        <group>
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="discount" attrs="{'invisible': [('fixed_price', '>', 0)]}"/>
                                    <field name="fixed_price" attrs="{'invisible': [('discount', '>', 0)]}"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="discount"/>
                                        <field name="fixed_price"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--
        	Real Estate Asset
        -->

        <!-- Real Estate Asset Tree View -->
        <record id="view_rem_unit_tree" model="ir.ui.view">
            <field name="name">rem.unit.tree</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <tree decoration-info="is_rent == True" string="Real Estate Unit">
                    <field name="has_lead_id" invisible="1"/>
                    <field name="is_rent" invisible="1"/>
                    <field name="display_name"/>
                    <field name="user_id"/>
                    <field name="type_id"/>
                    <field name="offer_type_id"/>
                    <field name="price" invisible="context.get('is_rent', False)"/>
                    <field name="rent_price" invisible="not context.get('is_rent', False)"/>
                    <field name="rent_uom_id" invisible="not context.get('is_rent', False)"/>
                    <field name="is_new"/>
                    <field name="stage_id"/>
                    <button name="action_select_unit" string="Select Unit" type="object" icon="fa-check"
                            invisible="not context.get('from_lead_id', False)"
                            attrs="{'invisible': [('has_lead_id','=', True)]}"/>
                    <button name="action_remove_unit" string="Remove Unit" type="object" icon="fa-times"
                            invisible="not context.get('from_lead_id', False)"
                            attrs="{'invisible': [('has_lead_id','!=', True)]}"/>
                </tree>
            </field>
        </record>

        <!-- Real Estate Asset Search View -->
        <record id="view_rem_unit_filter" model="ir.ui.view">
            <field name="name">rem.unit.filter</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <search string="Search Real Estate Unit">
                    <field name="name"/>
                    <field name="offer_type_id"/>
                    <field name="partner_id"/>
                    <field name="type_id"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="city_id"/>
                    <field name="state_id"/>
                    <field name="zip"/>
                    <field name="country_id"/>
                    <field name="is_new"/>
                    <separator/>
                    <!-- Geo -->
                    <field name="latitude"/>
                    <field name="longitude"/>
                    <separator/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                        <filter string="My Units" name="my" domain="[('user_id', '=', uid)]"/>
                        <filter name="forsale" string="For Sale" domain="[('is_rent', '=', False)]"
                                help="Units to sell"/>
                        <filter name="forrent" string="For Rent" domain="[('is_rent', '=', True)]"
                                help="Rentable units"/>
                        <filter name="inactives" string="Inactives" domain="[('active','=', False)]"
                                help="Inactive units"/>
                        <filter name="offertype" string="Offer Type" icon="terp-partner" domain="[]"
                                help="Offer type (e.g. buy, rent, ..)" context="{'group_by':'offer_type_id'}"/>
                        <filter string="City" icon="terp-partner" domain="[]" context="{'group_by':'city_id'}"/>
                        <filter string="Salesman" icon="terp-partner" domain="[]" help="Salesman"
                                context="{'group_by':'user_id'}"/>
                        <filter string="Needs Cleaning Services" icon="terp-partner" domain="[]"
                                context="{'group_by':'cleaning'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Real Estate Asset Form View -->
        <record id="view_rem_unit_form" model="ir.ui.view">
            <field name="name">rem.unit.form</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <form string="Real Estate Unit">
                    <header>
                        <field name="stage_id" widget="statusbar" clickable="True"
                               domain="[('offer_type_id', '=', offer_type_id)]"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="get_sale_orders"
                                    attrs="{'invisible': [('order_ids_count', '=', 0)]}"
                                    icon="fa-usd">
                                <field string="Sale(s)" name="order_ids_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object"
                                    name="get_unit_events"
                                    icon="fa-calendar">
                                <field string="Event(s)" name="event_ids_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action"
                                    name="%(rem.unit_listing_contract)d"
                                    icon="fa-file-text"
                                    attrs="{'invisible': [('listing_contract_count', '=', 0)]}"
                                    context="{'default_unit_id': active_id,'search_default_unit_id': active_id}">
                                <field string="Contracts" name="listing_contract_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action"
                                    name="%(rem.unit_tenant_contract)d"
                                    icon="fa-file-text"
                                    attrs="{'invisible': [('tenant_contract_count', '=', 0)]}"
                                    context="{'default_unit_id': active_id,'search_default_unit_id': active_id}">
                                <field string="Rent Contract(s)" name="tenant_contract_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name2" attrs="{'invisible': [('is_computed', '=', True)]}"/>
                                <field name="display_name" attrs="{'invisible': [('is_computed', '=', False)]}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <button string="New listing agreement"
                                        name="%(unit_listing_contract)d" type="action"
                                        attrs="{'invisible': ['|',('is_rent', '=', True),('listing_contract_count','!=',0)]}"
                                        class="btn-link"/>
                                <button string="New rent agreement"
                                        name="%(unit_tenant_contract)d" type="action"
                                        attrs="{'invisible': ['|',('is_rent', '=', False),('tenant_contract_count','!=',0)]}"
                                        class="btn-link"/>
                                <field name="reference" invisible="1"/>
                                <field name="offer_type_id" options="{'no_create': True}"
                                       invisible="context.get('default_offer_type', False)"/>
                                <field name="type_id"/>
                                <field name="is_new"/>
                                <field name="user_id" placeholder="Salesperson"/>
                                <field name="active" readonly="1"/>
                                <field name="is_computed" invisible="1"/>
                                <!-- Address -->
                                <label for="street" string="Address"
                                       attrs="{'invisible': [('structure_id', '!=', False)]}"/>
                                <div class="o_address_format" attrs="{'invisible': [('structure_id', '!=', False)]}">
                                    <field name="street" placeholder="Street..." class="o_address_street"
                                           attrs="{'required': [('structure_id', '=', False)]}"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city_id" placeholder="City" class="o_address_city"
                                           attrs="{'required': [('structure_id', '=', False)]}"/>
                                    <field name="zone_id" placeholder="Zone"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"
                                           attrs="{'required': [('structure_id', '=', False)]}"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <!-- Listings -->
                                <field name="current_listing_contract_id"
                                       attrs="{'invisible': [('is_rent', '=', True)]}"/>
                                <field name="current_tenant_contract_id"
                                       attrs="{'invisible': [('is_rent', '=', False)]}"/>
                                <field name="partner_id" context="{'search_default_seller':1, 'default_seller':1}"/>
                                <field name="price" attrs="{'invisible': [('is_rent', '=', True)]}"/>
                                <!-- Rentals -->
                                <field name="is_rent" invisible="1"/>
                                <label for="rent_price" attrs="{'invisible': [('is_rent', '=', False)]}"/>
                                <div name="rent_price_div" class="o_row"
                                     attrs="{'invisible': [('is_rent', '=', False)]}">
                                    <field name="rent_price"/>€
                                    <field name="rent_uom_id" options="{'no_create': True, 'no_open': True}"/>
                                </div>
                                <field name="table_id" attrs="{'invisible': [('is_rent', '=', False)]}"/>

                                <label for="rent_current_price"
                                       attrs="{'invisible': ['|',('is_rent', '=', False),('table_id','=',False)]}"/>
                                <div name="current_rent_price_div" class="o_row"
                                     attrs="{'invisible': ['|',('is_rent', '=', False),('table_id','=',False)]}">
                                    <field name="rent_current_price"/>
                                    <field name="rent_current_uom_id" options="{'no_open': True}"/>
                                </div>
                                <!-- Geo -->
                                <field name='latitude' attrs="{'invisible': [('structure_id', '!=', False)]}"/>
                                <field name='longitude' attrs="{'invisible': [('structure_id', '!=', False)]}"/>
                                <button name="get_geo_coordinates" type="object"
                                        attrs="{'invisible': ['|', '|', '|', '|', '|', ('structure_id', '!=', False), ('street', '=', False), ('zip', '=', False), ('city_id', '=', False), ('state_id', '=', False), ('country_id', '=', False)]}"
                                        string="Get Coordinates" colspan="2" icon="fa-check"/>
                                <field name="cleaning"/>
                                <field name="structure_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="General Features" invisible="1">
                                <group name="general_features">
                                    <group class="rem_left"></group>
                                    <group class="rem_right"></group>
                                </group>
                            </page>
                            <page string="Indoor Features" invisible="1">
                                <group name="indoor_features">
                                    <group class="rem_left"></group>
                                    <group class="rem_right"></group>
                                </group>
                            </page>
                            <page string="Outdoor Features" invisible="1">
                                <group name="outdoor_features">
                                    <group class="rem_left"></group>
                                    <group class="rem_right"></group>
                                </group>
                            </page>
                            <page string="Description">
                                <field name="website_description" widget="html"
                                       placeholder="Add some important details about your unit ..."/>
                            </page>
                            <page name="Photos" string="Photos">
                                <group>
                                    <field name="image_ids" mode="kanban" nolabel="1"
                                           context="{'default_unit_id': active_id}">
                                        <kanban>
                                            <field name="name"/>
                                            <field name="image"/>
                                            <field name="image_medium"/>
                                            <field name="unit_id"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click" style="position: relative">
                                                        <a t-if="! read_only_mode" type="delete"
                                                           style="position: absolute; right: 0; padding: 4px; display: inline-block">
                                                            X
                                                        </a>
                                                        <div class="oe_module_vignette">
                                                            <img
                                                                    t-att-src="kanban_image('rem.image', 'image_medium', record.unit_id.raw_value)"
                                                                    t-att-title="record.name.value"
                                                                    class="img-responsive"/>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Real Estate Asset Kanban View -->
        <record id="view_rem_unit_kanban" model="ir.ui.view">
            <field name="name">rem.unit.kanban</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="display_name"/>
                    <field name="is_rent"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click rem_oe_kanban_global_click">
                                <div class="o_kanban_image rem_o_kanban_image">
                                    <img t-att-src="kanban_image('rem.image', 'image', record.id.value)"
                                         class="rem_kanban_image"/>
                                </div>
                                <div class="rem_kanban_transparent_box"></div>
                                <div class="rem_kanban_display_name">
                                    <div class="rem_kanban_price">
                                        <field name="price" invisible="context.get('is_rent', False)"/>
                                        <field name="rent_price" invisible="not context.get('is_rent', False)"/>
                                        €
                                        <field name="rent_uom_id" invisible="not context.get('is_rent', False)"/>
                                    </div>
                                    <field name="display_name"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <function model="rem.unit" name="add_custom_fields_to_rem_unit_form_view"/>
        <!--
        	Unit City
        -->

        <!-- Unit City Tree View -->
        <record id="view_rem_unit_city_tree" model="ir.ui.view">
            <field name="name">rem.unit.city.tree</field>
            <field name="model">rem.unit.city</field>
            <field name="arch" type="xml">
                <tree string="Unit City">
                    <field name="name" string="Name"/>
                    <field name="state_id" string="State"/>
                </tree>
            </field>
        </record>

        <!-- Unit City Search View -->
        <record id="view_rem_unit_city_filter" model="ir.ui.view">
            <field name="name">rem.unit.city.filter</field>
            <field name="model">rem.unit.city</field>
            <field name="arch" type="xml">
                <search string="Search Unit City">
                    <field name="name"/>
                    <field name="state_id"/>
                </search>
            </field>
        </record>

        <!-- Unit City Form View -->
        <record id="view_rem_unit_city_form" model="ir.ui.view">
            <field name="name">rem.unit.city.form</field>
            <field name="model">rem.unit.city</field>
            <field name="arch" type="xml">
                <form string="Unit City">
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                            <field name="state_id" string="State"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--
            Unit Zone
        -->

        <!-- Unit Zone Tree View -->
        <record id="view_rem_unit_zone_tree" model="ir.ui.view">
            <field name="name">rem.unit.zone.tree</field>
            <field name="model">rem.unit.zone</field>
            <field name="arch" type="xml">
                <tree string="Unit Zone">
                    <field name="name" string="Name"/>
                    <field name="city_id" string="City"/>
                </tree>
            </field>
        </record>

        <!-- Unit Zone Search View -->
        <record id="view_rem_unit_zone_filter" model="ir.ui.view">
            <field name="name">rem.unit.zone.filter</field>
            <field name="model">rem.unit.zone</field>
            <field name="arch" type="xml">
                <search string="Search Unit Zone">
                    <field name="name"/>
                    <field name="city_id"/>
                </search>
            </field>
        </record>

        <!-- Unit Zone Form View -->
        <record id="view_rem_unit_zone_form" model="ir.ui.view">
            <field name="name">rem.unit.zone.form</field>
            <field name="model">rem.unit.zone</field>
            <field name="arch" type="xml">
                <form string="Unit Zone">
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                            <field name="city_id" string="City"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 
        	Unit Type
        -->

        <!-- Unit Type Tree View -->
        <record id="view_rem_unit_type_tree" model="ir.ui.view">
            <field name="name">rem.unit.type.tree</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <tree string="Unit Type">
                    <field name="name" string="Name"/>
                </tree>
            </field>
        </record>

        <!-- Unit Type Search View -->
        <record id="view_rem_unit_type_filter" model="ir.ui.view">
            <field name="name">rem.unit.type.filter</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <search string="Search Unit Type">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Unit Type Form View -->
        <record id="view_rem_unit_type_form" model="ir.ui.view">
            <field name="name">rem.unit.type.form</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <form string="Unit Type">
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 
        	Unit Stage 
		-->

        <!-- Unit Stage Tree View -->
        <record id="view_rem_unit_stage_tree" model="ir.ui.view">
            <field name="name">rem.unit.stage.tree</field>
            <field name="model">rem.unit.stage</field>
            <field name="arch" type="xml">
                <tree string="Unit Stage">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="offer_type_id"/>
                    <field name="force_show"/>
                    <field name="force_hide"/>
                </tree>
            </field>
        </record>

        <!-- Unit Stage Search View -->
        <record id="view_rem_unit_stage_filter" model="ir.ui.view">
            <field name="name">rem.unit.stage.filter</field>
            <field name="model">rem.unit.stage</field>
            <field name="arch" type="xml">
                <search string="Search Unit Stage">
                    <field name="name"/>
                    <field name="offer_type_id"/>
                    <group string="Group By" expand="1">
                        <filter string="Type" name="grouppertype" context="{'group_by':'offer_type_id'}" domain="[]"
                                help="Contract Type"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Unit Stage Form View -->
        <record id="view_rem_unit_stage_form" model="ir.ui.view">
            <field name="name">rem.unit.stage.form</field>
            <field name="model">rem.unit.stage</field>
            <field name="arch" type="xml">
                <form string="Unit Stage">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" groups="base.group_no_one"
                                    class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Stage name ..."/>
                            </h1>
                        </div>
                        <group>
