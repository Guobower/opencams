<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!--
        	Real Estate Unit
        -->

        <!-- Real Estate Unit Tree View -->
        <record id="view_rem_unit_tree" model="ir.ui.view">
            <field name="name">rem.unit.tree</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <tree string="Real Estate Unit">
                    <field name="display_name"/>
                    <field name="type_id"/>
                </tree>
            </field>
        </record>

        <!-- Real Estate Unit Search View -->
        <record id="view_rem_unit_filter" model="ir.ui.view">
            <field name="name">rem.unit.filter</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <search string="Search Unit">
                    <field name="name"/>
                    <field name="owner_id"/>
                    <field name="type_id"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="zip"/>
                    <field name="country_id"/>
                    <group expand="0" string="Group By">
                        <filter name="inactives" string="Inactives" domain="[('active','=', False)]"
                                help="Inactive units"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Real Estate Unit Form View -->
        <record id="view_rem_unit_form" model="ir.ui.view">
            <field name="name">rem.unit.form</field>
            <field name="model">rem.unit</field>
            <field name="arch" type="xml">
                <form string="Unit">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="get_unit_events"
                                    icon="fa-calendar">
                                <field string="Event(s)" name="event_ids_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type_id"/>
                                <field name="active" readonly="1"/>

                                <!-- Address -->
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <field name="sale_price"/>
                            </group>
                            <group class="rem_inherits"></group>
                        </group>
                        <notebook>
                            <page string="General Features" invisible="1">
                                <group name="general_features">
                                    <group class="rem_left"></group>
                                    <group class="rem_right"></group>
                                </group>
                            </page>
                            <page string="Indoor Features" invisible="1">
                                <group name="indoor_features">
                                    <group class="rem_left"></group>
                                    <group class="rem_right"></group>
                                </group>
                            </page>
                            <page string="Outdoor Features" invisible="1">
                                <group name="outdoor_features">
                                    <group class="rem_left"></group>
                                    <group class="rem_right"></group>
                                </group>
                            </page>

                            <page name="Photos" string="Photos">
                                <group>
                                    <field name="image_ids" mode="kanban" nolabel="1"
                                           context="{'default_unit_id': active_id}">
                                        <kanban>
                                            <field name="name"/>
                                            <field name="image"/>
                                            <field name="image_medium"/>
                                            <field name="unit_id"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_kanban_global_click" style="position: relative">
                                                        <a t-if="! read_only_mode" type="delete"
                                                           style="position: absolute; right: 0; padding: 4px; display: inline-block">
                                                            X
                                                        </a>
                                                        <div class="oe_module_vignette">
                                                            <img
                                                                    t-att-src="kanban_image('rem.image', 'image_medium', record.unit_id.raw_value)"
                                                                    t-att-title="record.name.value"
                                                                    class="img-responsive"/>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 
        	Unit Type
        -->

        <!-- Unit Type Tree View -->
        <record id="view_rem_unit_type_tree" model="ir.ui.view">
            <field name="name">rem.unit.type.tree</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <tree string="Unit Type">
                    <field name="name" string="Name"/>
                </tree>
            </field>
        </record>

        <!-- Unit Type Search View -->
        <record id="view_rem_unit_type_filter" model="ir.ui.view">
            <field name="name">rem.unit.type.filter</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <search string="Search Unit Type">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Unit Type Form View -->
        <record id="view_rem_unit_type_form" model="ir.ui.view">
            <field name="name">rem.unit.type.form</field>
            <field name="model">rem.unit.type</field>
            <field name="arch" type="xml">
                <form string="Unit Type">
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 
        	Unit Image
		-->

        <!-- Unit Image Tree View -->
        <record id="view_rem_image_tree" model="ir.ui.view">
            <field name="name">rem.image.tree</field>
            <field name="model">rem.image</field>
            <field name="arch" type="xml">
                <tree string="Unit Image">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Unit Image Search View -->
        <record id="view_rem_image_filter" model="ir.ui.view">
            <field name="name">rem.image.filter</field>
            <field name="model">rem.image</field>
            <field name="arch" type="xml">
                <search string="Search Unit Image">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Unit Image Form View -->
        <record id="view_rem_image_form" model="ir.ui.view">
            <field name="name">rem.image.form</field>
            <field name="model">rem.image</field>
            <field name="arch" type="xml">
                <form string="Unit Image">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Describe the photo ..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="image" widget="image" class="oe_avatar"
                                       options='{"preview_image": "image_medium"}'/>
                                <field name="sequence" placeholder="Sequence"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_rem_unit" model="ir.actions.act_window">
            <field name="name">Units</field>
            <field name="res_model">rem.unit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new unit.
              </p>
            </field>
        </record>

    </data>
</odoo>
